<!-- SUPPORT BOX -->
<div class="paperCard -cord1RT -supportBox">
  <div class="wrp">
    <div class="txt">
      <h2 class="hl-main"><span>Freie</span> Unterstützung</h2>

      <p>
        Du kannst dieses Projekt mit einem freien Betrag deiner Wahl unterstützen, oder wähle eines der Dankeschöns.
      </p>

      <%= form_with url: new_crowd_pledge_path, html: { class: 'campaign_support_form', method: :get } do |f| %>
      <%= f.hidden_field :crowd_campaign_id, value: @crowd_campaign.id %>

        <div class="input-field">
          <%= label_tag :donation_amount do %>
            <%= icon_tag "currency-euro" %>
          <% end %>
          <%= f.number_field :donation_amount, class: 'amount', placeholder: 'Freier Betrag', required: true %>
        </div>
        <%= f.submit 'Jetzt unterstützen', class: 'btn-primary' %>
      <% end %>

    </div>
  </div>
  <div class="card"></div>
</div>
<!-- /SUPPORT BOX -->
