  <% @crowd_campaign.crowd_pledges.authorized.visible.last(3).reverse.each do |crowd_pledge| %>
    <div class="supporter">
      <%= avatar_image crowd_pledge.user, size: :thumb, class: 'img-round' %>
      <div>
        <span><%= crowd_pledge.contact_name %></span><br>
        <small>vor <%= time_ago_in_words(crowd_pledge.created_at) %></small>
      </div>
    </div>
  <% end %>

  <% if current_user == @crowd_campaign.user && !@preview %>
    <%= link_to 'javascript:', class: 'btn-round-icon jBoxTooltip', data: {tooltip_id: "tt-crowdcampaign-#{@crowd_campaign.id}"} do %>
      <%= icon_tag "pencil" %>
    <% end %>
    <div class="jBoxHidden jBoxDropdown" id="<%= "tt-crowdcampaign-#{@crowd_campaign.id}" %>">
      <%= link_to status_crowd_campaign_path(@crowd_campaign) do %>
        <%= icon_tag "bar-chart-growth" %>
        <div class="icontxt">Kampagnen Statistiken</div>
      <% end %>
      <%= link_to edit_crowd_campaign_path(@crowd_campaign) do %>
        <%= icon_tag "pencil" %>
        <div class="icontxt">Kampagne bearbeiten</div>
      <% end %>
      <% if @crowd_campaign.draft? %>
        <%= link_to crowd_campaign_path(@crowd_campaign), data: { confirm: 'Bist du dir sicher?' }, method: :delete do %>
          <%= icon_tag "cross" %>
          <div class="icontxt">Kampagne l√∂schen</div>
        <% end %>
      <% end %>
    </div>
  <% end %>
