<div class="paperCard -rewardBox -cord1RT <%= crowd_donation.available? ? '' : 'soldOut' %>">
  <div class="wrp">
    <div class="reward-img trigger">
      <% if crowd_donation.donation_type == 'material' %>
        <%= icon_tag "label-tag" %>
      <% elsif crowd_donation.donation_type == 'assistance' %>
        <%= icon_tag "time-clock" %>
      <% else %>
        <%= icon_tag "pin" %>
      <% end %>
    </div>
    <div class="facts">
      <strong class="trigger">
        <%= crowd_donation.limit %>
        <% if crowd_donation.donation_type == 'material' %>
          Stück
        <% elsif crowd_donation.donation_type == 'assistance' %>
          <%= crowd_donation.limit > 1 ? 'Personen' : 'Person' %>
        <% else %>
          <%= crowd_donation.limit > 1 ? 'Räume' : 'Raum' %>
        <% end %>
      </strong>
      <h4 class="trigger"><%= crowd_donation.title %></h4>
      <div class="content">
        <div class="txt trigger">
          <%= crowd_donation.description %><br><br>
          <small>Benötigt im Zeitraum zwischen:</small>
          <p><em>
            <% if crowd_donation.startdate %>
              Ab frühestens: <%= I18n.localize(crowd_donation.startdate, format:'%d. %b %Y') %><br>
            <% end %>
            <% if crowd_donation.enddate %>
              Bis spätestens: <%= I18n.localize(crowd_donation.enddate, format:'%d. %b %Y') %>
            <% end %>
          </em></p>
        </div>
        <% if crowd_donation.available? %>
          <%= link_to 'Auswählen', choice_crowd_donation_pledges_path(crowd_campaign_id: crowd_donation.crowd_campaign.id, crowd_donation_id: crowd_donation.id), class: 'btn-primary -mint -shadow' %>
        <% else %>
          <%= link_to 'Bereits ausgebucht', 'javascript:', class: 'btn-primary -disabled' %>
        <% end %>
      </div>
      <small class="trigger"><%= crowd_donation.taken_count %> <%= crowd_donation.limit ? "von #{crowd_donation.limit}" : "" %> gebucht</small>
    </div>
  </div>
  <div class="card"></div>
</div>
