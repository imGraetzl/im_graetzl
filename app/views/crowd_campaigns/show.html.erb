<% meta(
    title: t('.title', title: @crowd_campaign.title[0..55].gsub(/\s\w+\s*$/,'...')),
    description: t('.description', desc: @crowd_campaign.slogan),
    og_title: t('.title', title: @crowd_campaign.title[0..80].gsub(/\s\w+\s*$/,'...')),
    og_description: t('.description', desc: @crowd_campaign.slogan),
    og_image: @crowd_campaign.cover_photo_url(:header, :large) || image_url("meta/#{current_region.id}/og_logo.png")
  )
%>
<% if @crowd_campaign.scope_public? %>
  <% meta(robots: 'index, follow') %>
<% else %>
  <% meta(robots: 'noindex, follow') %>
<% end %>

<section class="crowd_campaign" data-preview="<%= @preview %>">

  <div class="hl-subtext">
    <h2><em>- <%= link_to 'WeLocally Crowdfunding', region_crowd_campaigns_path %> -</em></h2>
    <h1><%= @crowd_campaign.title %></h1>
    <p><%= @crowd_campaign.slogan %></p>
  </div>

  <div class="coverImg">
    <%= avatar_image @crowd_campaign.user, size: :thumb, class: 'img-round crowd-avatar' %>

    <% if @crowd_campaign.video? %>
      <%= link_to 'javascript:', class: 'play-icon jBoxVideo', rel: 'nofollow' do %>
        <%= cover_header_image(@crowd_campaign, class: 'titleImg') %>
      <% end %>
    <% else %>
        <%= cover_header_image(@crowd_campaign, class: 'titleImg') %>
    <% end %>

    <div class="social-icons">
      <em>Teilen auf:</em>
      <%= icon_tag "social-facebook" %>
      <%= image_tag 'svg/icon-instagram.svg', loading: 'lazy', width:28, height:28, class: 'icon' %>
    </div>
  </div>
  <div class="coverImgBottom"></div>

  <div class="layoutArea fundingArea">
    <div class="mainArea">
      <%= render 'funding_bar' %>
    </div>
    <div class="sideArea">
      <%= link_to 'Unterstützen', 'javascript:', class: 'btn-primary -rose -large -shadow btn-support' %>
    </div>
  </div>

  <div class="last-supporters">
    <%= render 'crowd_campaigns/show/last_supporters' %>
  </div>

  <div class="navArea">
    <div class="tabs-ctrl -plain">
      <ul class="tabs-nav">
        <li class="active"><a href="#tab-info">Projekt Infos</a></li>
        <li><a href="#tab-posts">Projekt News <% if @crowd_campaign.crowd_campaign_posts.present? %><small><%= @crowd_campaign.crowd_campaign_posts.count %></small><% end %></a></li>
        <li><a href="#tab-comments">Pinnwand <% if @crowd_campaign.comments.present? %><small><%= @crowd_campaign.comments.count %><% end %></small></a></li>
        <li><a href="#tab-supporters">UnterstützerInnen <% if @crowd_campaign.crowd_pledges.authorized.present? %><small><%= @crowd_campaign.crowd_pledges.authorized.count %><% end %></small></a></li>
      </ul>
    </div>
  </div>

  <div id="tabs-container">
    <%= render 'crowd_campaigns/show/tab_info' %>
    <%= render 'crowd_campaigns/show/tab_posts' %>
    <%= render 'crowd_campaigns/show/tab_comments' %>
    <%= render 'crowd_campaigns/show/tab_supporters' %>
  </div>

</section>

<%= render 'crowd_campaigns/show/video' if @crowd_campaign.video? %>
