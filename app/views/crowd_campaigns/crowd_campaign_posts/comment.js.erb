    $commentForm.replaceWith("<%= j render 'crowd_campaigns/crowd_campaign_posts/comment_form', post: @crowd_campaign_post %>");
    APP.components.stream.initCommentForm();
    APP.components.stream.initLinkify($(<%= @comment.target_url_params %>));
    APP.controllers.application.jBoxGallery();
  <% else %>
    alert('Es gab ein Problem, bitte versuche es sp√§ter nochmal.');
  <% end %>
})();
