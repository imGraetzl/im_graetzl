<%= form_for Comment.new, url: comment_post_crowd_campaign_path(@crowd_campaign, post_id: post.id), remote: true,
    html: { class: 'entryForm', data: { behavior: "comment-form-#{post.id}" } } do |f| %>
  <label>
    <%= avatar_image current_user, size: :thumb, class: 'avatar img-round show-badge' %>
    <%= f.text_area :content, placeholder: 'Kommentieren' %>
  </label>
  <div class="hideBlock">
    <%= f.button 'Antwort senden', data: { disable_with: 'sendet...' } %>
  </div>
<% end %>
