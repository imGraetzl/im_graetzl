<% title('Crowdfunding Kampagne bearbeiten') %>

<section class="crowdfunding-form <%= @crowd_campaign.editable? ? '' : 'noteditable' %>">

  <%= render 'crowd_campaigns/form/navigation' %>
  <%= render 'crowd_campaigns/form/basic_video' %>

  <%= form_for(@crowd_campaign, html: { class: 'crowdfunding_form' }) do |f| %>
  <%= form_errors_for @crowd_campaign %>

  <%= render 'crowd_campaigns/form/basic', f: f %>

  <div class="input-button">
    <%= f.button 'Speichern', data: { disable_with: 'speichert...' }, class: 'btn-secondary -mint -saving' %>
    <%= link_to 'Vorschau', 'javascript:', data: { disable_with: 'speichert...' }, class: ["btn-secondary", "-mint", @crowd_campaign.editable? ? 'save-and-preview' : '-disabled'] %>
    <%= f.button 'Weiter zur Projekt Beschreibung', data: { disable_with: 'speichert...' }, class: 'btn-primary btn-next', name: 'page', value: edit_description_crowd_campaign_path(@crowd_campaign) if !f.object.new_record? %>
  </div>

  <% end %>

  <%= render 'crowd_campaigns/form/footer_text' %>

</section>
<%= render 'shared/bbcode_help' %>