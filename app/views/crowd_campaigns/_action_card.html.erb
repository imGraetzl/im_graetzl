<div class="cardbox-wrp" data-behavior="masonry-card">
  <div class="paperCard -cord1RT -illuteaser -crowd_campaign">
    <div class="wrp">
      <div class="user">
        <% if current_user %>
          <%= avatar_image current_user, size: :thumb, class: 'avatar img-round show-badge' %>
          <span><%= current_user.username %></span>
        <% else %>
          <picture>
            <source srcset="<%= image_path('fallbacks/user_avatar.webp') %>" type="image/webp" />
            <%= image_tag('fallbacks/user_avatar.png', loading: 'lazy', class: 'img-round') %>
          </picture>
          <span>Dein Name</span>
        <% end %>
      </div>
      <h3>Lokales Crowdfunding, setze deine Vorhaben mit der Kraft der Gemeinschaft um.</h3>
      <%= link_to 'Starte jetzt deine Crowdfunding Kampagne', start_crowd_campaigns_path, class: 'btn-primary -rose' %>
      <% if local_assigns[:view_faq] %>
        <%= link_to 'Fragen und Antworten zum Crowdfunding', info_crowdfunding_path, class: 'link-more' %>
      <% end %>
    </div>
    <div class="card"></div>
  </div>

  <% if local_assigns[:view_all] %>
    <% if local_assigns[:graetzl] %>
      <%= link_to 'Alle Crowdfunding Projekte', crowd_campaigns_graetzl_path(graetzl), class: 'link-more' %>
    <% elsif local_assigns[:district] %>
      <%= link_to 'Alle Crowdfunding Projekte', district_crowd_campaigns_path(district), class: 'link-more' %>
    <% else %>
      <%= link_to 'Alle Crowdfunding Projekte', region_crowd_campaigns_path, class: 'link-more' %>
    <% end %>
  <% end %>
</div>
