(function() {
  var $cardContainer = $("[data-behavior='search-card-container']");
  var $paginateLink = $("[data-behavior='search-paginate-link']");

  <% if params[:page].blank? %>
    $cardContainer.html("<%= j render @results %>")
  <% else %>
    $cardContainer.append("<%= j render @results %>");
  <% end %>

  <% if @results.next_page.present? %>
    $paginateLink.attr('href', "<%= j next_page_url %>").removeClass("hide");
  <% else %>
    $paginateLink.addClass("hide");
  <% end %>
})();
