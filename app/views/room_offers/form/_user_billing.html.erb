<%= fields_for :user, current_user do |f| %>

  <% f.object.build_billing_address(
    first_name: current_user.first_name,
    last_name: current_user.last_name,
    country: "Austria", city: "Wien"
  ) if f.object.billing_address.nil? %>

  <%= f.fields_for :billing_address do |bf| %>
    <div class="formBlock">

      <div class="hl-subtext">
        <h2><span>Rechnungs</span> Anschrift</h2>
        <p>
          Gib deine Rechnungsanschrift bekannt unter welcher du deinen Raum vermietest. (Steht auf der Rechnung des Mieters, wenn dein Raum angemietet wird.)
        </p>
      </div>

      <div class="form-columns">
        <div class="input-field">
          <%= bf.label :first_name do %>
            <%= icon_tag "user-avatar" %>
            <span>Vorname</span>
          <% end %>
          <%= bf.text_field :first_name, placeholder: 'Vorname' %>
        </div>

        <div class="input-field">
          <%= bf.label :last_name do %>
            <%= icon_tag "user-avatar" %>
            <span>Nachname</span>
          <% end %>
          <%= bf.text_field :last_name, placeholder: 'Nachname' %>
        </div>
      </div>

      <div class="input-field">
        <%= bf.label :company do %>
          <%= icon_tag "user-avatar" %>
          <span>Firma</span>
        <% end %>
        <%= bf.text_field :company, placeholder: 'Firma' %>
      </div>

      <div class="input-field">
        <%= f.label :vat_id do %>
          <%= icon_tag "profile-vcard" %>
          <span>UID-Nr.</span>
        <% end %>
        <%= f.text_field :vat_id, placeholder: 'Umsatz-Steuer-Identifikations-Nummer (falls vorhanden).' %>
      </div>


      <div class="input-field">
        <%= bf.label :street do %>
          <%= icon_tag "map-location" %>
          <span>Strasse & Nr.</span>
        <% end %>
        <%= bf.text_field :street, placeholder: 'Strasse & Nr.' %>
      </div>

      <div class="form-columns">
        <div class="input-field">
          <%= label_tag :zip do %>
            <%= icon_tag "map-location" %>
            <span>Postleitzahl</span>
          <% end %>
          <%= bf.text_field :zip, placeholder: 'PLZ' %>
        </div>

        <div class="input-field">
          <%= label_tag :city do %>
            <%= icon_tag "map-location" %>
            <span>Ort/Stadt</span>
          <% end %>
          <%= bf.text_field :city, placeholder: 'Wien' %>
        </div>
      </div>

      <div class="input-field">
        <%= label_tag :country do %>
          <%= icon_tag "map-location" %>
          <span>Land</span>
        <% end %>
        <%= bf.text_field :country, placeholder: 'Österreich' %>
      </div>

    </div>
  <% end %>

  <div class="hl-subtext">
    <h2>Dein <span>Auszahlungskonto</span></h2>
    <p>
      Deinen IBAN benötigen wir für die Auszahlung deiner Mieteinnahmen.
    </p>
  </div>

  <div class="input-field">
    <%= f.label :iban do %>
      <%= icon_tag "profile-vcard" %>
      <span>Kontoverbindung</span>
    <% end %>
    <%= f.text_field :iban, placeholder: 'IBAN', required: true %>
  </div>


<% end %>
