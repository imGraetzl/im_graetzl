<%= semantic_form_for [:admin, @location] do |f| %>

  <%= f.inputs name: 'Basic Location' do %>
    <%= f.input :name %>
    <%= f.input :graetzl %>
    <%= f.input :state, as: :select, collection: Location.states.keys %>
  <% end %>

  <%= f.inputs name: 'Adresse' do %>
    <%= f.input :address_street %>
    <%= f.input :address_zip %>
    <%= f.input :address_city %>
    <%= f.input :address_coordinates, as: :hidden %>
  <% end %>

  <%= f.inputs name: 'Kontakt', for: :contact do |contact_form| %>
    <%= contact_form.input :website, as: :url %>
    <%= contact_form.input :email, as: :email %>
    <%= contact_form.input :phone %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, as: :button %>
    <%= f.action :cancel, as: :link, class: 'btn-light' %>
  <% end %>

<% end %>