active_admin_form_for [:admin, resource] do |f|
  semantic_errors
  inputs "Group" do
    input :title
    input :featured
  end
  inputs "Users" do
    has_many :group_users, allow_destroy: true, new_record: 'Add User' do |gu|
      gu.input :user, include_blank: "Select User"
      gu.input :role, include_blank: false
    end
  end
  actions
end
