active_admin_form_for [:admin, resource] do |f|
  semantic_errors
  inputs do
    input :title
    input :main_photo, as: :file, hint: f.object.main_photo && image_tag(f.object.main_photo_url(:thumb))
    input :remove_main_photo, as: :boolean if f.object.main_photo
    input :position
    input :css_ico_class
    input :slug
  end

  actions
end
