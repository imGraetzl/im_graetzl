active_admin_form_for [:admin, resource] do |f|
  semantic_errors
  inputs do
    input :name
    input :context, as: :select, collection: LocationCategory.contexts.keys, include_blank: false
    input :main_photo, as: :file, hint: f.object.main_photo && image_tag(f.object.main_photo_url(:small))
    input :remove_main_photo, as: :boolean if f.object.main_photo
    input :position
    input :icon
  end
  actions
end
