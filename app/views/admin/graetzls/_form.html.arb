active_admin_form_for [:admin, resource] do |f|
  f.semantic_errors
  inputs do
    input :region_id, collection: Region.all, include_blank: true, input_html: { :class => 'admin-filter-select'}
    input :name
    input :slug unless f.object.new_record?
    input :area, as: :string
    input :zip
    input :neighborless
  end
  actions
end
