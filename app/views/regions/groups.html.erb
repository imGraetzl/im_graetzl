<% meta(
    title: (@category ? @category.title : 'Alle') + " Gruppen in #{current_region}",
    description: t('.description'),
    robots: 'index, follow',
    og_title: (@category ? @category.title : 'Alle') + " Gruppen in #{current_region}",
    og_description: t('.description'),
    og_image: image_url('meta/og_logo.png')
  )
%>

<section class="region groups">

  <%= render 'map' %>
  <%= render 'navigation' %>

  <div class="hl-subtext -cards">
    <h1><span>Gruppen</span> - Austausch & Vernetzung</h1>
  </div>

  <%= form_tag groups_path, method: :get, remote: true, class: 'cards-filter' do %>
    <div class="filter-selection-text-jbox">
      Zeige mir Gruppen aus <%= link_to 'allen Kategorien', '#filter-modal-category', data: { no_filter_label: 'allen Kategorien'}, class: 'filter-modal-category' %>,
      in <%= link_to "ganz #{current_region}", '#filter-modal-district', data: { no_filter_label: "ganz #{current_region}"}, class: 'filter-modal-district' %>
    </div>
    <div id="filter-modal-category" class="filter-modal-jbox">
      <%= render 'filters/group_categories' %>
    </div>
    <div id="filter-modal-district" class="filter-modal-jbox-district">
      <%= render current_region.use_districts ? 'filters/district' : 'filters/graetzl' %>
    </div>
  <% end %>

  <div class="card-grid-container">
    <div class="card-grid" data-behavior="groups-card-container"></div>
    <div class="action-card-container" data-behavior="groups-action-card-container">
      <%= render 'groups/action_card', create_link: true %>
    </div>
    <!-- Insert Featured Card -->
    <%= link_to 'Mehr anzeigen', 'javascript:', remote: true, class: 'link-load hide', data: { disable_with: 'lÃ¤dt...', behavior: 'groups-paginate-link' }, rel: 'nofollow' %>
  </div>

</section>
