<div class="cardbox-wrp" data-behavior="masonry-card">
  <div class="paperCard -cord1RT -illuteaser -poll">
    <div class="wrp">
      <div class="user">
        <% if current_user %>
          <%= avatar_image current_user, size: :thumb, class: 'avatar img-round show-badge' %>
          <span><%= current_user.username %></span>
        <% else %>
          <picture>
            <source srcset="<%= image_path('fallbacks/user_avatar.webp') %>" type="image/webp" />
            <%= image_tag('fallbacks/user_avatar.png', loading: 'lazy', class: 'img-round') %>
          </picture>
          <span>Dein Name</span>
        <% end %>
      </div>

        <h3>Du m√∂chtest als Expert*in im Energieteiler aufscheinen?</h3>
        <%= link_to "Mail an: #{t("region.#{current_region.id}.contact_email")}", "mailto:#{t("region.#{current_region.id}.contact_email")}", class: 'btn-primary' %>
    </div>
    <div class="card"></div>
  </div>

  <% if local_assigns[:view_all] %>
    <%= link_to 'Zum Energieteiler', energie_teiler_path, class: 'link-more' %>
  <% end %>
</div>
