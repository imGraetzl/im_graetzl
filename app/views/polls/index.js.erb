(function() {
    var $cardContainer = $("[data-behavior='polls-card-container']");
    var $paginateLink = $("[data-behavior='polls-paginate-link']");

  <% if params[:page].blank? %>
    $cardContainer.html("<%= j render @polls %>")
  <% else %>
    $cardContainer.append("<%= j render @polls %>");
  <% end %>

  <% if @polls.next_page.present? %>
    $paginateLink.attr('href', "<%= j next_page_url %>").removeClass("hide");
  <% else %>
    $paginateLink.addClass("hide");
  <% end %>
})();
