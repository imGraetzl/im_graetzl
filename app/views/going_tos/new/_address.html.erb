<div class="address-container">

  <div class="hl-subtext">
    <h1>Teilnehmer Daten</h1>
    <p>
      Ben√∂tigst du eine spezielle Anschrift auf deiner Rechnung, so gib diese hier bekannt.
    </p>
  </div>

  <%= form_tag choose_payment_going_tos_url, method: :get do %>
    <%= hidden_field_tag :meeting_id, params[:meeting_id] %>
    <%= hidden_field_tag :meeting_additional_date_id, params[:meeting_additional_date_id] %>

    <div class="input-field">
      <%= label_tag :company do %>
        <%= icon_tag "user-avatar" %>
        <span>Firma</span>
      <% end %>
      <%= text_field_tag :company, current_user.billing_address.try(:company), placeholder: 'Firma (optional)', data: { field: 'company' } %>
    </div>

    <div class="input-field">
      <%= label_tag :full_name do %>
        <%= icon_tag "user-avatar" %>
        <span>Name</span>
      <% end %>
      <%= text_field_tag :full_name, current_user.billing_address&.full_name || current_user.full_name, placeholder: 'Vor- & Nachname', data: { field: 'full_name' } %>
    </div>

    <div class="input-field">
      <%= label_tag :street do %>
        <%= icon_tag "map-location" %>
        <span>Strasse & Nr.</span>
      <% end %>
      <%= text_field_tag :street, current_user.billing_address&.street || current_user.address_street, placeholder: 'Strasse & Nr.', data: { field: 'street' } %>
    </div>

    <div class="form-columns">

      <div class="input-field">
        <%= label_tag :zip do %>
          <%= icon_tag "map-location" %>
          <span>Postleitzahl</span>
        <% end %>
        <%= text_field_tag :zip, current_user.billing_address&.zip || current_user.address_zip, placeholder: 'PLZ', data: { field: 'zip' } %>
      </div>

      <div class="input-field">
        <%= label_tag :city do %>
          <%= icon_tag "map-location" %>
          <span>Ort/Stadt</span>
        <% end %>
        <%= text_field_tag :city, current_user.address_city, placeholder: 'Stadt', data: { field: 'city' } %>
      </div>
    </div>

    <%= submit_tag "Weiter", class: 'btn-primary' %>
  <% end %>
</div>
