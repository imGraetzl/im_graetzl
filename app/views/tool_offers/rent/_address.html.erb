<div class="address" id="tab-address">

  <div class="hl-subtext">
    <h1>Rechnungsadresse</h1>
    <p>
      Gib deine Rechnungsadresse an, um den Toolteiler anzufragen.
    </p>
  </div>

  <div class="input-field">
    <%= label_tag :renter_company do %>
      <%= icon_tag "user-avatar" %>
      <span>Firma</span>
    <% end %>
    <%= text_field_tag :renter_company, nil, placeholder: 'Firma (optional)' %>
  </div>

  <div class="input-field">
    <%= label_tag :renter_name do %>
      <%= icon_tag "user-avatar" %>
      <span>Name</span>
    <% end %>
    <%= text_field_tag :renter_name, current_user.full_name, placeholder: 'Vor- & Nachname' %>
  </div>

  <div class="input-field">
    <%= label_tag :renter_address do %>
      <%= icon_tag "map-location" %>
      <span>Strasse & Nr.</span>
    <% end %>
    <%= text_field_tag :renter_address, current_user.address.try(:street), placeholder: 'Strasse & Nr.' %>
  </div>

  <div class="form-columns">

    <div class="input-field">
      <%= label_tag :renter_zip do %>
        <%= icon_tag "map-location" %>
        <span>Postleitzahl</span>
      <% end %>
      <%= text_field_tag :renter_zip, current_user.address.try(:zip), placeholder: 'PLZ' %>
    </div>

    <div class="input-field">
      <%= label_tag :renter_city do %>
        <%= icon_tag "map-location" %>
        <span>Ort/Stadt</span>
      <% end %>
      <%= text_field_tag :renter_city, current_user.address.try(:city), placeholder: 'Stadt' %>
    </div>

  </div>

  <%= button_tag "Weiter", type: 'button', class: 'btn-primary next-screen', data: { tab: 'tab-payment' } %>

</div>
