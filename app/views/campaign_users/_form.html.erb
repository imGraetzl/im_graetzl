<div class="form-columns">
  <div class="input-field">
    <%= f.label :first_name do %>
      <%= icon_tag "user-avatar" %>
      <span>Vorname</span>
    <% end %>
    <%= f.text_field :first_name, placeholder: 'Vorname' %>
  </div>
  <div class="input-field">
    <%= f.label :last_name do %>
      <%= icon_tag "user-avatar" %>
      <span>Nachname</span>
    <% end %>
    <%= f.text_field :last_name, placeholder: 'Nachname' %>
  </div>
</div>
<div class="input-field">
  <%= f.label :email do %>
    <%= icon_tag "at-symbol" %>
    <span>E-Mail</span>
  <% end %>
  <%= f.text_field :email, placeholder: 'E-Mail Adresse' %>
</div>
<div class="input-field">
  <%= f.label :website do %>
    <%= icon_tag "globe" %>
    <span>Website</span>
  <% end %>
  <%= f.text_field :website, placeholder: 'Website (falls vorhanden)' %>
</div>

<div class="form-columns">

  <div class="input-field">
    <%= f.label :zip do %>
      <%= icon_tag "map-location" %>
      <span>Postleitzahl</span>
    <% end %>
    <%= f.text_field :zip, placeholder: 'PLZ' %>
  </div>

  <div class="input-field">
    <%= f.label :city do %>
      <%= icon_tag "map-location" %>
      <span>Ort/Stadt</span>
    <% end %>
    <%= f.text_field :city, placeholder: 'Ort' %>
  </div>
</div>
