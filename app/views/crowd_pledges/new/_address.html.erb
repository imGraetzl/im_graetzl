<div class="address-container">

  <div class="hl-subtext">
    <h1>Deine Daten</h1>
    <p>
      Um das Dankeschön auszuwählen, gib bitte zunächst deine Daten bekannt.
      <%= @crowd_pledge.id %>
    </p>
  </div>

  <%= form_for @crowd_pledge do |f| %>
    <%= f.hidden_field :crowd_campaign_id %>

    <div class="input-field">
      <%= f.label :contact_name do %>
        <%= icon_tag "user-avatar" %>
        <span>Name</span>
      <% end %>
      <%= f.text_field :contact_name, placeholder: 'Vor- & Nachname', class: 'renter-input', data: { field: 'renter-name' } %>
    </div>

    <div class="input-field">
      <%= f.label :address_street do %>
        <%= icon_tag "map-location" %>
        <span>Strasse & Nr.</span>
      <% end %>
      <%= f.text_field :address_street, placeholder: 'Strasse & Nr.', class: 'renter-input', data: { field: 'renter-address' } %>
    </div>

    <div class="form-columns">

      <div class="input-field">
        <%= f.label :address_zip do %>
          <%= icon_tag "map-location" %>
          <span>Postleitzahl</span>
        <% end %>
        <%= f.text_field :address_zip, placeholder: 'PLZ', class: 'renter-input', data: { field: 'renter-zip' } %>
      </div>

      <div class="input-field">
        <%= f.label :address_city do %>
          <%= icon_tag "map-location" %>
          <span>Ort/Stadt</span>
        <% end %>
        <%= f.text_field :address_city, placeholder: 'Stadt', class: 'renter-input', data: { field: 'renter-city' } %>
      </div>
    </div>

    <%= submit_tag "Weiter", class: 'btn-primary' %>
  <% end %>
</div>
