<div class="nested-fields">
  <div class="input-field">
    <%= f.label :amount do %>
      <%= icon_tag "currency-euro" %>
    <% end %>
    <%= f.text_field :amount, placeholder: "Preis in â‚¬" %>
  </div>
  <div class="input-field name">
    <%= f.label :name, 'Beschreibung' %>
    <%= f.text_field :name, placeholder: "z. B.: pro Monat fÃ¼r 2 Tage / Woche" %>
  </div>
  <div class="input-field">
    <%= f.label :description, 'Description' %>
    <%= f.text_field :description %>
  </div>
  <div class="input-field">
    <%= f.label :features do %>
    <span>Features<br/><small>(per Line)</small></span>
    <% end %>
    <%= f.text_area :features %>
  </div>

  <div class="room-categories">
    <%= f.collection_check_boxes :room_module_ids, RoomModule.all, :id, :name do |b| %>
      <div class="input-checkbox">
      <%= b.check_box %>
      <%= b.label %>
      </div>
    <% end %>
  </div>

  <%= link_to_remove_association f do %>
    <div class="btn-delete">
      <%= icon_tag "trash-delete-remove" %>
    </div>
  <% end %>
</div>
