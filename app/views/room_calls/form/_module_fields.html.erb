<div class="nested-fields">
  <div class="input-select">
    <%= f.label :room_module_id do %>
      <%= icon_tag "pie-chart" %>
      <span> Modul wählen</span>
    <% end %>
    <%= f.collection_select :room_module_id, RoomModule.all, :id, :name, include_blank: 'Modul Kategorie wählen ..' %>
  </div>

  <div class="input-textarea">
    <%= f.label :description do %>
      <%= icon_tag "layout-document" %>
      <span>Beschreibung</span>
    <% end %>
    <%= f.text_area :description, placeholder: "Kurze Beschreibung des Moduls .." %>
  </div>

  <div class="input-field">
    <%= f.label :quantity do %>
      <%= icon_tag "users" %>
      <span> Anzahl Plätze </span>
    <% end %>
    <%= f.text_field :quantity, placeholder: "Anzahl freie Plätze für dieses Modul .. (z.B: 5)" %>

    <%= link_to_remove_association f do %>
      <div class="btn-delete">
        <%= icon_tag "trash-delete-remove" %>
      </div>
    <% end %>
  </div>
</div>
