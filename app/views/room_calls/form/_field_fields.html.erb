<div class="nested-fields">
  <div class="input-field">
    <%= f.label :label do %>
      <%= icon_tag "question-mark" %>
      <span>Call Frage</span>
    <% end %>
    <%= f.text_field :label, placeholder: "Deine Frage an die Bewerber ..." %>
    <%= link_to_remove_association f do %>
      <div class="btn-delete">
        <%= icon_tag "trash-delete-remove" %>
      </div>
    <% end %>
  </div>
</div>
