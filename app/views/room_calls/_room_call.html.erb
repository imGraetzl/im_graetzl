<div class="cardBox -location" data-behavior="masonry-card">

  <div class="cardBoxHeader">
    <div class="coverImgWrapper">
      <%= link_to cover_photo_for(room_call), room_call %>
    </div>
    <% if room_call.graetzl %>
      <div class="categoryicon">
        <%= "#{room_call.district.zip}, #{room_call.graetzl.name}" %>
      </div>
    <% end %>
  </div>

  <div class="cardBoxContent -room-call">

    <div class="location-shortfacts room-call-shortfacts">
      <%= link_to room_call, class: 'locationlogo' do %>
        <%= attachment_image_tag room_call, :avatar, :fill, 200, 200, fallback: 'avatar/user/200x200.png', class: 'img-square' %>
      <% end %>
    </div>

    <div class="slogan">
      <%= room_call.title %>
    </div>

    <div class="txt">
      <p><%= truncate room_call.description, length: 100 %></p>
    </div>

  </div>
</div>
