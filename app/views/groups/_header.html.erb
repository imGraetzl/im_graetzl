<div class="group-header">
  <h1><%= @group.title %></h1>
  <p>Raumteiler Gruppe fur <%= link_to @group.parent, @group.parent %> </p>
  <p><%= @group.users.count %> Mitglieder | <%= @group.private? ? "Geschlossene" : "Ã–ffnen" %> Gruppe </p>
  <p>Organisiert von:</p>
  <ul>
    <% @group.admins.each do |user| %>
      <li>
        <%= attachment_image_tag user, :avatar, :fill, 100, 100, fallback: 'avatar/user/100x100.png', class: 'img-round' %>
        <p><%= user.full_name %></p>
      </li>
    <% end %>
  </ul>

  <% if @group.admins.include?(current_user) %>
    <%= link_to "Edit Group", edit_group_path(@group) %>
  <% end %>

  <% if !user_signed_in? %>
    <p> <%= link_to "Login to Join Group", new_user_session_path(redirect: request.original_url) %>
  <% elsif !@group.users.include?(current_user) %>
    <% if @group.group_join_requests.exists?(user_id: current_user.id) %>
      <p> Group join request sent. </p>
    <% else %>
      <p> <%= link_to "Join Group", request_join_group_path(@group), method: :post %>
    <% end%>
  <% end %>
</div>
