<div class="user cardBox -action">
  <div class="avatar">
    <%= attachment_image_tag join_request.user, :avatar, :fill, 100, 100, fallback: 'avatar/user/100x100.png', class: 'img-round' %>
  </div>
  <div class="infos">
    <span><%= join_request.user.first_name %> <br> <%= join_request.user.last_name.truncate(18, separator: ' ') %></span>
    <p class="date">Anfrage am: <br><%= I18n.localize(join_request.created_at, format:'%d. %B %Y') %></p>
    <p class="date">
      <% if @group.room_call_readable_by?(current_user) && @group.room_call_submission?(join_request) %>
        <%= link_to submission_room_call_path(@group.room_call, submission_id: @group.room_call_submission_id(join_request)) do %>
        Call Einreichung
        <% end %>
      <% elsif join_request.join_answers.present? || join_request.request_message? %>
        <%= link_to "#request-message-modal-#{join_request.id}", class: 'request-message-opener' do %>
        Beitritts Nachricht
        <% end %>
      <% end %>
    </p>
  </div>
  <div class="request-message-modal" id="request-message-modal-<%= join_request.id %>">
    <div class="wrapper">
      <div class="avatar">
        <%= attachment_image_tag join_request.user, :avatar, :fill, 100, 100, fallback: 'avatar/user/100x100.png', class: 'img-round' %>
      </div>
      <div>
        <% if join_request.join_answers.present? %>
          <% join_request.join_answers.each_slice(2) do |question, answer| %>
            <h3><%= question %></h3>
            <p> <%= answer %> </p>
          <% end %>
        <% else %>
          <%= join_request.request_message %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="btns">
    <%= link_to accept_request_group_path(@group, join_request_id: join_request.id), method: :post, class: 'btn-userIcons -small -mint' do %>
      <%= icon_tag "check" %>
    <% end %>
    <%= link_to reject_request_group_path(@group, join_request_id: join_request.id), method: :post, class: 'btn-userIcons -small -grey' do %>
      <%= icon_tag "trash-delete-remove" %>
    <% end %>
  </div>
</div>
