<h3 class="title">
  <% if @category %>
    <%= @category.title %>
  <% else %>
    Alle Themen
  <% end %>
  <span>(<%= @discussions.size %><%= @discussions.size == 1 ? '' : ''  %>)</span>
</h3>

<div class="discussion-box">
  <% if @group.users.include?(current_user) %>
    <div class="cardBox" id="new-topic">
      <%= render 'groups/discussions/form', discussion: Discussion.new %>
    </div>
  <% end %>
</div>

<div class="cardBoxCollection -double -group-discussion">
<% @discussions.each do |discussion| %>
  <%= render 'groups/discussions/discussion_preview', discussion: discussion %>
<% end %>
</div>
