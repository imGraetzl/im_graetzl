<div class="categories-list">
  <h3>Kategorien</h3>
  <ul>
    <li>
      <%= icon_tag('record') %>
      <%= link_to "Alle", group_discussions_path(@group), remote: true, class: 'autoload-link' %>
    </li>
    <% @group.group_categories.each do |group_category| %>
      <li>
        <%= icon_tag('record') %>
        <%= link_to group_category.title, group_discussions_path(@group, group_category_id: group_category.id), remote: true %>
      </li>
    <% end %>
    <li>
      <%= icon_tag('record') %>
      <%= link_to "Nicht kategorisiert", group_discussions_path(@group, group_category: ''), remote: true %>
    </li>
  </ul>
</div>
