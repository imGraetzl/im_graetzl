(function() {
  var $cardContainer = $("[data-behavior='groups-card-container']");
  var $paginateLink = $("[data-behavior='groups-paginate-link']");

  <% if params[:page].blank? %>
    $cardContainer.html("<%= j render @groups %>")
  <% else %>
    $cardContainer.append("<%= j render @groups %>");
  <% end %>

  <% if @groups.next_page.present? %>
    $paginateLink.attr('href', "<%= raw(next_page_url(@groups)) %>").removeClass("hide");
  <% else %>
    $paginateLink.addClass("hide");
  <% end %>
})();
