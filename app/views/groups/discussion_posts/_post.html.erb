<div class="user-post" id="discussion-post-<%= post.id %>">
  <div class="user">
    <div class="avatar">
      <%= attachment_image_tag post.user, :avatar, :fill, 100, 100, fallback: 'avatar/user/100x100.png', class: 'img-round' %>
    </div>
    <div class="infos">
      <div class="name"><%= post.user.full_name %></div>
      <div class="date">
        <%= I18n.localize(post.created_at, format:'%a, %d. %B %Y, %H:%M') %>
      </div>
    </div>

    <div class="btn-control">
      <% if post.edit_permission?(current_user) %>
        <%= link_to 'javascript:', class: 'edit-post-link' do %>
          <%= icon_tag "pencil" %>
        <% end %>
      <% end %>

      <% if post.delete_permission?(current_user) %>
        <%= link_to [@group, post], method: :delete, remote: true, data: { confirm: 'Beitrag wirklich lÃ¶schen?', disable_with: 'wird gelÃ¶scht...'}, class: 'delete' do %>
          <%= icon_tag "trash-delete-remove" %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="content">

    <p><%= post.content %></p>

    <% if post.images.present? %>
      <div class="entryImgUploads" data-featherlight-gallery data-featherlight-filter="a">
        <% post.images.each do |image| %>
          <%= link_to attachment_image_tag(image, :file, :fill, 200, 200), attachment_url(image, :file, :limit, 800, 800) %>
        <% end %>
      </div>
    <% end %>
    
  </div>

  <% if post.edit_permission?(current_user) %>
    <%= form_for [@group, post], remote: true, html: { class: 'edit-post-form' } do |f| %>
      <div class="input-textarea">
        <%= f.text_area :content, cols: 80, rows: 3 %>
      </div>
      <div class="upload-oldschool">
        <%= f.label :images do %>
          <%= icon_tag "photo-camera" %>
          <span>Bilder</span>
        <% end %>
        <div class="field-wrp">
          <%= f.attachment_field :images_files, multiple: true, direct: true, presigned: true %>
        </div>
      </div>
      <div class="actions">
        <%= f.submit 'Speichern', data: { disable_with: 'sendet...' }, class: 'btn-primary -mint' %>
        <%= f.button 'Abbrechen', type: 'button', class: 'cancel-edit-link btn-secondary -mint' %>
      </div>
    <% end %>
  <% end %>

</div>
