(function() {
  <% if @comment.persisted? %>
    var $commentForm = $("[data-behavior='comment-form-<%= @post.id %>']");
    $commentForm.before("<%= j render 'groups/discussion_posts/comment', comment: @comment %>");
    $commentForm.replaceWith("<%= j render 'groups/discussion_posts/comment_form', discussion_post: @post %>");
    APP.components.stream.initCommentForm();
    APP.components.stream.initLinkify();
  <% else %>
    alert('Es gab ein Problem, bitte versuche es sp√§ter nochmal.');
  <% end %>
})();
