<div class="cardbox-wrp" data-behavior="masonry-card">
  <div class="paperCard -cord1RT -illuteaser -groups">
    <div class="wrp">
      <div class="user">
        <% if current_user %>
          <%= avatar_image current_user, size: :small, class: 'avatar img-round' %>
          <span><%= current_user.username %></span>
        <% else %>
          <%= image_tag('fallbacks/user_avatar.png', class: 'img-round') %>
          <span>Dein Name</span>
        <% end %>
      </div>
      <h3>Kooperation, Austausch und Zusammenarbeit. Trete jetzt einer Gruppe bei.</h3>
      <% if local_assigns[:create_link] %>
        <%= link_to 'Zu deinen Gruppen', groups_user_path, class: 'btn-primary' %>
      <% else %>
        <% if current_user.admin? %>
          <%= link_to 'Neue Gruppe grÃ¼nden', new_group_path, class: 'btn-primary' %>
        <% end %>
      <% end %>
    </div>
    <div class="card"></div>
  </div>

  <% if local_assigns[:view_all] %>
    <% if local_assigns[:graetzl] %>
      <%= link_to 'Alle Gruppen', groups_graetzl_path(graetzl), class: 'link-more' %>
    <% elsif local_assigns[:district] %>
      <%= link_to 'Alle Gruppen', groups_district_path(district), class: 'link-more' %>
    <% else %>
      <%= link_to 'Alle Gruppen', groups_wien_path, class: 'link-more' %>
    <% end %>
  <% end %>
</div>
