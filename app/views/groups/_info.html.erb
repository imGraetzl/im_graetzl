<div class="info-section">

  <!-- CONTENT for MEMBERS and open Groups -->
  <% if @group.readable_by?(current_user) %>
    <div class="top-posts">
      <% if @discussions.present? %>
        <% @discussions.first(2).each do |discussion| %>
          <%= render 'groups/discussions/discussion_preview', discussion: discussion %>
        <% end %>
        <%= link_to "Alle Diskussionen anzeigen", "javascript:", class: 'all-discussions-link btn-primary -mint' %>
      <% else %>
        <p> Noch keine Diskussionen in der Gruppe.. </p>
      <% end %>
    </div>

    <h2>Mitglieder</h2>

    <div class="users member-section">
      <% @group.admins.each do |user| %>
      <div class="user">
        <div class="avatar">
          <%= attachment_image_tag user, :avatar, :fill, 100, 100, fallback: 'avatar/user/100x100.png', class: 'img-round' %>
        </div>
        <div class="infos">
          <div class="title">Organisator:</div>
          <span><%= user.first_name %><br><%= user.last_name %></span>
        </div>
      </div>
      <% end %>
      <% @group.members.each do |user| %>
      <div class="user">
        <div class="avatar">
          <%= attachment_image_tag user, :avatar, :fill, 200, 200, fallback: 'avatar/user/200x200.png', class: 'img-round' %>
        </div>
        <div class="infos">
          <span><%= user.first_name %><br><%= user.last_name %></span>
        </div>
      </div>
      <% end %>
    </div>

    <h2>Über die Gruppe</h2>
    <p><%= @group.description %></p>

  <!-- CONTENT for closed Groups -->
  <% else %>

    <h2>Über die Gruppe</h2>
    <p><%= @group.description %></p>

  <% end %>

</div>
