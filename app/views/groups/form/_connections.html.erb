        <%= icon_tag "location" %>
        <span>Raumangebot</span>
      <% end %>
      <%= f.collection_select(:room_offer_id, current_user.room_offers, :id, :slogan, {:include_blank => 'Raumteiler verkn端pfen..'}) %>
    </div>
  <% end %>

  <% if current_user.room_demands.present? %>
