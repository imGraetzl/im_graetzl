      <%= f.label :room_demand_id do %>
        <%= icon_tag "location" %>
        <span>Raumsuche</span>
      <% end %>
      <%= f.collection_select(:room_demand_id, current_user.room_demands, :id, :slogan, {:include_blank => 'Raumteiler verkn端pfen..'}) %>
    </div>
  <% end %>

<% end %>
