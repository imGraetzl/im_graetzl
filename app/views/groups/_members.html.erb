<div class="members-section">

  <div class="users">

    <!-- JOIN REQUESTS -->
    <% if @group.admins.include?(current_user) %>
      <% @group.group_join_requests.pending.includes(:user).each do |join_request| %>
      <div class="user join-request cardBox">
        <div class="avatar">
          <%= attachment_image_tag join_request.user, :avatar, :fill, 100, 100, fallback: 'avatar/user/100x100.png', class: 'img-round' %>
        </div>
        <div class="infos">
          <span><%= join_request.user.first_name %> <br> <%= join_request.user.last_name.truncate(18, separator: ' ') %></span>
          <p><%= I18n.localize(join_request.created_at, format:'%d. %B %Y') %></p>
        </div>
        <div class="btns">
          <%= link_to accept_request_group_path(@group, join_request_id: join_request.id), method: :post, class: 'btn-userIcons -small -mint' do %>
            <%= icon_tag "check" %>
          <% end %>
          <%= link_to reject_request_group_path(@group, join_request_id: join_request.id), method: :post, class: 'btn-userIcons -small -grey' do %>
            <%= icon_tag "trash-delete-remove" %>
          <% end %>
        </div>
      </div>
      <% end %>
    <% end %>
    <!-- /JOIN REQUESTS -->

    <!-- MEMBERS -->
    <% @group.group_users.member.includes(:user).each do |group_user| %>
    <div class="user join-request cardBox">
      <div class="avatar">
        <%= attachment_image_tag group_user.user, :avatar, :fill, 100, 100, fallback: 'avatar/user/100x100.png', class: 'img-round' %>
      </div>
      <div class="infos">
        <span><%= group_user.user.first_name %> <br> <%= group_user.user.last_name.truncate(18, separator: ' ') %></span>
        <p><%= I18n.localize(group_user.created_at, format:'%d. %B %Y') %></p>
      </div>
    </div>
    <% end %>
    <!-- /MEMBERS -->

  </div>
</div>
