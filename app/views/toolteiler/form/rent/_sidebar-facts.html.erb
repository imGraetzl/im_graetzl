<div class="cardBox -toolteiler">
  <div class="cardBoxHeader">
    <a href="/toolteiler">
      <div class="coverImgWrapper">
        <img class="attachment toolteiler cover_photo coverImg" src="https://cache.willhaben.at/mmo/3/308/144/263_-1764754106.jpg">
      </div>
    </a>
    <div class="priceSheet">
      <div class="txt">ab</div>
      <div class="price">25 €</div>
    </div>
    <div class="categoryicon">
      <svg class="icon-share"><use xlink:href="#icon-share"></use></svg>
    </div>
  </div>

  <div class="cardBoxContent">

    <h3 class="sidebar">Deine Auswahl</h3>

    <ul class="pricing-summary -duration">
      <li>
        <div class="duration">Miete:</div>
        <div class="title">Do, 20. Jun – Sa, 30. Jun</div>
      </li>
    </ul>

    <ul class="pricing-summary">
      <li>
        <div class="cost">250,00 €</div>
        <div class="costname">
          10 Tage x 25 €

          <!-- Hint Questionmark Panel-->
          <%= render 'shared/questionmark',hint_id: "1" ,hint_message: 'Das ist der Tagespreis für die Anzahl der Tage die du den Toolteiler mieten möchtest.' %>

        </div>
      </li>
      <li>
        <div class="cost">- 50,00 €</div>
        <div class="costname">
          Rabatt 10 Tage x 5 €

          <!-- Hint Questionmark Panel-->
          <%= render 'shared/questionmark',hint_id: "2" ,hint_message: 'Dieser Toolteiler hat 10% Rabatt ab einer Miete von 2 Tagen.' %>

        </div>
      </li>
      <li>
        <div class="cost">40,00 €</div>
        <div class="costname">
          Servicegebühr inkl. Versicherung

          <!-- Hint Questionmark Panel-->
          <%= render 'shared/questionmark',hint_id: "3" ,hint_message: 'Hier kommt noch der Versicherungstext rein sauber' %>

        </div>
      </li>
      <li class=sum>
        <div class="cost">240,00 €</div>
        <div class="costname">Gesamt</div>
      </li>
    </ul>

  </div>
</div>
