<div class="cardBox -zuckerl">
  <div class="cardBoxHeader">
    <div class="imgpreview" data-behavior="imagepreview">
      <div class="coverImgWrapper">
        <%= attachment_image_tag(zuckerl, :image, :fill, 300, 180, class: 'coverImg') if zuckerl.image_id %>
      </div>
    </div>

    <div class="categoryicon">
      <%= icon_tag "shopping-bag" %>
    </div>
  </div>
  <div class="cardBoxContent">
    <div class="avatar-block">
      <div class="avatarImg"><%= avatar_for zuckerl.location %></div>
      <div class="typetxt">
        <div class="name"><%= zuckerl.location.name %></div>
        <div class="category"><%= zuckerl.location.location_category.name %></div>
        <% if address = zuckerl.location.address %>
          <div class="address">
            <%= icon_tag "location" %>
            <%= zuckerl.location.address.street %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="zuckerlteasertxt">
      <div class="hl">
        <%= icon_tag "shopping-bag" %>
        Grätzlzuckerl im <%= zuckerl_month(zuckerl) %>
      </div>
      <div class="title"><%= zuckerl.title %></div>
      <div class="description"><%= zuckerl.description %></div>
    </div>
    <% if zuckerl.link %>
      <%= link_to zuckerl.link, class: 'btn-userIcons', target: '_blank' do %>
        <%= icon_tag "globe" %>
        Mehr dazu
      <% end %>
    <% end %>
  </div>
</div>

<div class="basicdata">
  <div class="headline">Eckdaten</div>
  <ul class="facts">
    <li><strong>Laufzeit:</strong> <%= zuckerl_month_and_year(zuckerl) %></li>
    <li><strong>Grätzl:</strong> <%= zuckerl.visibility %></li>
    <li><strong>Preis:</strong> <%= zuckerl.total_price_with_currency %> (inkl. 20% USt.)</li>
  </ul>
</div>
