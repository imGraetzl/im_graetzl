<%= form_errors_for f.object %>
<%= f.hidden_field :location_id %>
<%= f.hidden_field :graetzl_price, value: zuckerl_price('graetzl') %>
<%= f.hidden_field :all_districts_price, value: zuckerl_price('all_districts') %>


<div class="input-field">
  <%= f.label :title do %>
    <%= icon_tag "record" %>
    <span><%= Zuckerl.human_attribute_name :title %></span>
  <% end %>
  <%= f.text_field :title,
    placeholder: 'Gib deinem Angebot einen knackigen Titel ... (80 Zeichen)',
    id: 'zuckerl_title',
    maxlength: 80,
    data: { behavior: 'titleinput' } %>
</div>

<div class="input-textarea">
  <%= f.label :description do %>
    <%= icon_tag "layout-document" %>
    <span><%= Zuckerl.human_attribute_name :description %></span>
  <% end %>
  <%= f.text_area :description,
    placeholder: 'Beschreibe dein Angebot in 1-2 Sätzen ... (160 Zeichen)',
    id: 'zuckerl_description',
    maxlength: 160,
    data: { behavior: 'descriptioninput'} %>
</div>

<div class="input-field">
  <%= f.label :link do %>
    <%= icon_tag "globe" %>
    <span>Link zum Angebot</span>
  <% end %>
  <%= f.url_field :link,
    placeholder: 'http://www ...',
    id: 'zuckerl_link',
    data: { behavior: 'linkinput' } %><em></em>
</div>

<div class="upload-oldschool">
  <%= f.label :image do %>
    <%= icon_tag "photo-camera" %>
    <span>Bild hochladen</span>
  <% end %>
  <div class="field-wrp">
    <%= f.attachment_field :image, direct: true, presigned: true, data: { behavior: 'imageinput' } %>
  </div>
</div>

<div class="input-labledcheckbox">
  <%= f.label :all_districts do %>
    <%= icon_tag "map-location" %>
    <span>Zuckerl Sichtbarkeit</span>
  <% end %>
  <div class="field-wrp district_visibility">
    <div class="input-radio">
      <%= f.radio_button :all_districts, false, data: { behavior: 'all_districts_false'} %>
      <%= f.label "all_districts_false", "#{@location.districts.first.numeric}. Bezirk" %>
    </div>
    <div class="input-radio">
      <%= f.radio_button :all_districts, true, data: { behavior: 'all_districts_true'} %>
      <%= f.label "all_districts_true", "Ganz Wien" %>
    </div>
    <div class="description">
      <small class="graetzl">
        Dein Grätzlzuckerl läuft im gesamten <%= @location.districts.first.numeric %>. Bezirk und kostet <span data-behavior="pricepreview"></span>.
      </small>
      <small class="all_districts">
        Dein Grätzlzuckerl läuft in ganz Wien und kostet <span data-behavior="pricepreview"></span>.
      </small>
    </div>
  </div>
</div>
