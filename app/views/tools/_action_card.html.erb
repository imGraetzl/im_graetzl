<div class="cardbox-wrp" data-behavior="masonry-card">
  <div class="paperCard -cord1RT -illuteaser -tools">
    <div class="wrp">
      <div class="user">
        <% if current_user %>
          <%= avatar_image current_user, size: :thumb, class: 'avatar img-round show-badge' %>
          <span><%= current_user.username %></span>
        <% else %>
          <picture>
            <source srcset="<%= image_path('fallbacks/user_avatar.webp') %>" type="image/webp" />
            <%= image_tag('fallbacks/user_avatar.png', loading: 'lazy', class: 'img-round') %>
          </picture>
          <span>Dein Name</span>
        <% end %>
      </div>
      <h3>Vermiete deine ungenutzten Arbeitsgeräte, oder suche nach einem Gerät.</h3>
      <%= link_to 'Neuen Geräteteiler erstellen', select_tool_offers_path, class: 'btn-primary' %>
    </div>
    <div class="card"></div>
  </div>
  <% if local_assigns[:view_all] %>
    <% if local_assigns[:graetzl] %>
      <%= link_to 'Alle Geräteteiler', tools_graetzl_path(graetzl), class: 'link-more' %>
    <% elsif local_assigns[:district] %>
      <%= link_to 'Alle Geräteteiler', district_tools_path(district), class: 'link-more' %>
    <% else %>
      <%= link_to 'Alle Geräteteiler', region_tools_path, class: 'link-more' %>
    <% end %>
  <% end %>
</div>
