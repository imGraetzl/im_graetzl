<div class="cardbox-wrp" data-behavior="masonry-card">
  <div class="paperCard -illuteaser -platform-meeting">
    <div class="wrp">
      <div class="user">
        <% if current_user %>
          <%= image_tag avatar_url(current_user, :small), class: 'img-round' %>
          <span><%= current_user.username %></span>
        <% else %>
          <%= image_tag('avatar/user/default.png', class: 'img-round') %>
          <span>Dein Name</span>
        <% end %>
      </div>
      <h3>Du möchtest mitmachen bei Selbstständige für Selbstständige? Trag hier dein Angebot ein:</h3>
      <%= link_to 'Angebot erstellen', new_meeting_path, class: 'btn-primary' %>
    </div>
    <div class="card"></div>
  </div>
</div>
