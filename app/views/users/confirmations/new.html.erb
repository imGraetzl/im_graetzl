<section class="resetStuff">

  <h1><span>Bestätigungsmail</span> nicht erhalten?</h1>

  <%= form_for(resource, as: resource_name, url: confirmation_path, html: { method: :post }) do |f| %>
      <%= render 'devise/shared/error_messages' %>

      <div class="input-field">
        <%= f.label :email do %>
          <%= icon_tag "at-symbol" %>
          <span>E-Mail</span>
        <% end %>
        <%= f.email_field :email, autofocus: true, placeholder: "Deine E-Mail Adresse ...", required: true %>
      </div>

      <div class="actions">
        <%= f.submit "Bestätigungsmail erneut senden", class: 'btn-primary' %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>

</section>
