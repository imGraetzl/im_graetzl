<% meta(
    title: 'Passwort 채ndern',
    robots: 'noindex, nofollow',
  )
%>

<section class="resetStuff newPassword">

  <h1>Dein <span>Passwort</span> 채ndern</h1>

  <%= form_for(resource, as: resource_name, url: password_path, html: { method: :put }) do |f| %>
      <%= render 'devise/shared/error_messages' %>

      <%= f.hidden_field :reset_password_token %>

      <div class="input-field">
        <%= f.label :password do %>
          <%= icon_tag "lock-1" %>
          <span>Neues Passwort</span>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
      </div>

      <div class="input-field">
        <%= f.label :password_confirmation do %>
          <%= icon_tag "unlocked" %>
          <span>Neues Passwort best채tigen</span>
        <% end %>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Passwort 채ndern", class: 'btn-primary' %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>

</section>
