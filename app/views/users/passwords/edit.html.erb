<section class="resetStuff">

  <h2>Passwort ändern</h2>

  <%= form_for(resource, as: resource_name, url: password_path, html: { method: :put }) do |f| %>
      <%= render 'devise/shared/error_messages' %>

      <%= f.hidden_field :reset_password_token %>

      <div class="input-field">
        <%= f.label :password do %>
          <%= icon_tag "lock-1" %>
          <span>Neues Passwort</span>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
      </div>

      <div class="input-field">
        <%= f.label :password_confirmation do %>
          <%= icon_tag "unlocked" %>
          <span>Neues Passwort bestätigen</span>
        <% end %>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Passwort ändern", class: 'btn-primary' %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>

</section>
