<% meta(
    title: 'Passwort vergessen?',
    robots: 'noindex, nofollow',
  )
%>

<section class="resetStuff">

  <h1><span>Passwort</span> vergessen?</h1>

  <%= form_for(resource, as: resource_name, url: password_path, html: { method: :post }) do |f| %>
      <%= render 'devise/shared/error_messages' %>

      <div class="input-field">
        <%= f.label :email do %>
          <%= icon_tag "at-symbol" %>
          <span>E-Mail</span>
        <% end %>
        <%= f.email_field :email, autofocus: true, placeholder: "Deine E-Mail Adresse ..." %>
      </div>

      <div class="actions">
        <%= f.submit "Passwort zurÃ¼cksetzten", class: 'btn-primary' %>
      </div>
  <% end %>

  <%= render "devise/shared/links" %>

</section>
