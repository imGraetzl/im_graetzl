<% title("#{@user.username} Region Einstellungen") %>

<section class="usersetup -favorite-graetzls">

  <!-- DESKTOP VERSION -->
  <div class="fav-desktop">
    <div class="mapImgBlock ">
      <%= favorite_graetzl_map(@graetzls, @favorite_graetzls, @user.graetzl) %>
      <h2 class="region-title"><%= t("region.#{current_region.id}.favorite_graetzl") %></h2>
      <div class="navBlock">
        <h3 class="hometitle"><%= t("region.#{current_region.id}.homegraetzl") %></h3>
        <div class="links home"></div>
        <h3 class="favoritetitle"><%= t("region.#{current_region.id}.favorite_graetzl") %></h3>
        <div class="links favorites"></div>
      </div>
      <a href="javascript:" class="btn-primary -rose -shadow save-favorite-graetzls">Auswahl speichern</a>
    </div>
    <h3 class="more-info-title">Infos zu deinen Einstellungen</h3>
    <p>Wähle auf der Karte <strong>deine <%= t("region.#{current_region.id}.favorite_graetzl") %></strong> um zusätzlich auch Inhalte und E-Mails aus diesen zu erhalten.</p>
    <p><%= t("region.#{current_region.id}.your_homegraetzl") %> kannst du duch ändern deiner Adresse <%= link_to 'hier anpassen', edit_user_path %>.</p>
  </div>

  <!-- MOBILE VERSION -->
  <div class="fav-mobile">
    <%= form_for(RoomDemand.new) do |f| %>
    <div class="form-block">
      <div class="hl-subtext">
        <h1><em><%= t("region.#{current_region.id}.your_homegraetzl") %></em></h1>
        <p>„<strong><%= current_user.graetzl %></strong>“</p>
        <p>Du kannst <%= t("region.#{current_region.id}.your_homegraetzl_lower") %> duch ändern deiner Adresse <%= link_to 'hier anpassen', edit_user_path %>.</p>
      </div>

      <div class="hl-subtext">
        <h1>Wähle deine <span><%= t("region.#{current_region.id}.favorite_graetzl") %></span></h1>
        <p>Um zusätzlich auch Inhalte und E-Mails <%= t("region.#{current_region.id}.from_your_favorite_graetzl") %> zu erhalten.</p>
      </div>
      <div id="area-select" data-region="<%= current_region %>" data-graetzl="<%= t("region.#{current_region.id}.graetzl") %>">
        <% if current_region.use_districts? %>
          <div class="input-select">
            <%= f.label :district_ids do %>
              <%= icon_tag "map-location" %>
              <span>Bezirk</span>
            <% end %>
            <%= f.select :district_ids, district_select_options, {}, { multiple: true, class: 'district-select' } %>
          </div>
        <% end %>
        <div class="input-select">
          <%= f.label :graetzl_ids do %>
            <%= icon_tag "map-location" %>
            <span><%= t("region.#{current_region.id}.favorite_graetzl") %></span>
          <% end %>
          <%= f.select :graetzl_ids, graetzl_select_options, {}, { multiple: true, class: 'graetzl-select' } %>
        </div>
      </div>
      <%= f.button 'Auswahl speichern', data: { disable_with: 'speichert...' }, class: 'btn-primary' %>
    </div>
    <% end %>
  </div>

</section>
