<%= f.fields_for :address do |address_fields| %>

    <p class="txt">Wie <span>findet</span> man dich</p>

    <div class="input-field">
      <%= address_fields.label :street_name do %>
          <%= icon_tag "map-location" %>
          <span>Straße</span>
      <% end %>
      <%= address_fields.text_field :street_name, placeholder: 'Straße' %>
    </div>

    <div class="input-field">
      <%= address_fields.label :street_number do %>
          <%= icon_tag "map-location" %>
          <span>Hausnummer</span>
      <% end %>
      <%= address_fields.text_field :street_number, placeholder: 'Nummer' %>
    </div>

    <div class="form-columns">

      <div class="input-field">
        <%= address_fields.label :zip do %>
            <%= icon_tag "map-location" %>
            <span>Postleitzahl</span>
        <% end %>
        <%= address_fields.text_field :zip, placeholder: 'PLZ' %>
      </div>

      <div class="input-field">
        <%= address_fields.label :city do %>
            <%= icon_tag "map-location" %>
            <span>Stadt</span>
        <% end %>
        <%= address_fields.text_field :city, placeholder: 'Wien' %>
      </div>

    </div>

<% end %>
