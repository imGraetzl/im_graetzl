(function() {
  <% if @comment.persisted? %>
    var $commentForm = $("[data-behavior='comment-form-<%= @location_post.id %>']");
    $commentForm.before("<%= j render @comment %>");
    $commentForm.replaceWith("<%= j render 'locations/location_posts/comment_form', post: @location_post %>");
    APP.components.stream.initCommentForm();
    APP.components.stream.initLinkify($("#comment_" + <%= @comment.id %> + " .txt"));
    APP.controllers.application.jBoxGallery();
  <% else %>
    alert('<%= @comment.errors.full_messages.first %>');
  <% end %>
})();
