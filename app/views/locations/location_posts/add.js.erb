(function() {
  var $streamForm = $("[data-behavior='stream-form']");

  <% if @location_post.persisted? %>
    $streamForm.after("<%= j render 'locations/location_posts/post', post: @location_post %>");
    $streamForm.replaceWith("<%= j render 'locations/stream_form' %>");
    APP.components.stream.init();
    APP.controllers_loggedin.locations.initStreamForm();
    APP.components.stream.initLinkify($("#location_post_" + <%= @location_post.id %> + " .txt"));
    APP.controllers.application.jBoxGallery();
  <% else %>
    alert('Folgende Fehler sind aufgetreten:\n<%= @location_post.errors.full_messages.first %>');
  <% end %>

})();
