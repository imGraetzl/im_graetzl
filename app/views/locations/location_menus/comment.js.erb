(function() {
  <% if @comment.persisted? %>
    var $commentForm = $("[data-behavior='comment-form-<%= @location_menu.id %>']");
    $commentForm.before("<%= j render @comment %>");
    $commentForm.replaceWith("<%= j render 'locations/location_menus/comment_form', menu: @location_menu %>");
    APP.components.stream.initCommentForm();
    APP.components.stream.initLinkify($("#comment_" + <%= @comment.id %> + " .txt"));
    APP.controllers.application.jBoxGallery();
  <% else %>
    alert('Es gab ein Problem, bitte versuche es sp√§ter nochmal.');
  <% end %>
})();
