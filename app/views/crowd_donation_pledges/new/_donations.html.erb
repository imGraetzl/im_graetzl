<div class="cardBox -crowdRewardBox">
  <div class="left">
    <div class="reward-img">
      <% if crowd_donation.donation_type == 'material' %>
        <%= icon_tag "label-tag" %>
      <% elsif crowd_donation.donation_type == 'assistance' %>
        <%= icon_tag "time-clock" %>
      <% else %>
        <%= icon_tag "pin" %>
      <% end %>
    </div>
  </div>
  <div class="right">
    <h4><%= crowd_donation.title %></h4>
    <% if crowd_donation.startdate %>
      <small>
        Benötigt: Ab frühestens: <%= I18n.localize(crowd_donation.startdate, format:'%d. %b %Y') %>
        <% if crowd_donation.enddate %>
          - Bis spätestens: <%= I18n.localize(crowd_donation.enddate, format:'%d. %b %Y') %>
        <% end %>
      </small>
    <% end %>
    <div class="description"><%= crowd_donation.description %></div>
  </div>
</div>

<% if !crowd_donation.question.empty? %>
<div class="question">
  <p class="title">Beantworte bitte noch folgende Frage zur <%= I18n.t("activerecord.attributes.crowd_donation.donation_type.#{@donation_type}") %>:</p>
  <p><%= crowd_donation.question %></p>
</div>
  <div class="input-textarea">
    <%= f.text_area :answer, placeholder: 'Gib bitte hier deine Antwort ein ...', required: true %>
  </div>
<% end %>
