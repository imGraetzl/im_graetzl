<% meta(
    title: t('.title'),
    description: t('.description'),
    robots: 'index, follow',
    og_title: t('.title'),
    og_description: t('.description'),
    og_image: image_url('meta/og_logo.png')
  )
%>

<section class="wien meetings">

  <%= render 'map' %>
  <%= render 'navigation' %>

  <div class="hl-subtext -cards">
    <h1><em>Events & Workshops</em></h1>
    <p>Motto: Runter vom Sofa & mitten rein ins Grätzlleben</p>
  </div>

  <%= form_tag meetings_path, method: :get, remote: true, class: 'cards-filter' do %>
    <div class="filter-selection-text">
      Zeige mir Einträge aus <%= link_to 'allen Bezirken', '#filter-modal-bezirk', data: { no_filter_label: 'allen Bezirken'} %>
      - Zu den <%= link_to 'Community Veranstaltungen', platform_meetings_wien_path, class: 'plain-link' %>
    </div>
  <% end %>

  <div id="filter-modal-bezirk" class="filter-modal">
    <%= render 'filters/district_graetzl' %>
  </div>

  <div class="card-grid-container">
    <div class="card-grid" data-behavior="meetings-card-container"></div>
    <div class="action-card-container" data-behavior="meetings-action-card-container">
      <%= render 'meetings/action_card' %>
    </div>
    <!-- Insert Featured Card -->
    <% unless Meeting.platform_meeting.upcoming.empty? %>
      <%= render "shared/featured_cards/community_meeting" %>
    <% end %>
    <%= link_to 'Mehr anzeigen', 'javascript:', remote: true, class: 'link-load hide', data: { disable_with: 'lädt...', behavior: 'meetings-paginate-link' }, rel: 'nofollow' %>
  </div>

</section>
