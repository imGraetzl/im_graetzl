        <a href="https://www.facebook.com/imGraetzl" target="_blank" class="facebook">
          Auf Facebook <%= icon_tag "social-facebook" %>
        </a>
      </div>
      <div class="col">
        <%= link_to 'Datenschutzrichtlinien', info_datenschutz_path %>
        <%= link_to 'Code of Conduct', info_code_of_conduct_path %>
        <%= link_to 'Impressum', info_impressum_path %>
        <%= link_to 'Medien', 'https://blog.imgraetzl.at/medien/', target: '_blank' %>
        <%= link_to 'AGB', info_agb_path %>
      </div>
      <div class="col logo-wa">
        <%= link_to(image_tag('logo-wa.png', width:132, height:65), 'https://wirtschaftsagentur.at/', target: '_blank') %>
        <div>Gefördert durch die Wirtschaftsagentur Wien.<br>
          Ein Fonds der Stadt Wien.</div>
      </div>
      <div class="col logo-ke">
        <%= link_to(image_tag('logo-klimafonds.png', width:76, height:65), 'https://www.klimafonds.gv.at', target: '_blank') %>
