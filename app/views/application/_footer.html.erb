<footer id="footer">
  <% if current_region.use_districts? %>
   <%= link_to info_danke_path, class: 'supporter' do %>imGrätzl <%= icon_tag "love" %> UnterstützerInnen<% end %>
  <% end %>
  <div class="inner">

    <div class="row infolinks">
      <div class="col">
        <%= link_to 'Infos & Services', info_path %>
        <%= link_to 'Infos zum Zuckerl', info_infos_zum_graetzlzuckerl_path %>
        <%= link_to 'Unterstützer-Team', unterstuetzer_team_path %>
