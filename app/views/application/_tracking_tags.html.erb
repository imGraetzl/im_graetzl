<script>
  window.imgraetzl = window.imgraetzl || {};
</script>
<% if Rails.env.production? %>
<!-- Production -->

  <!-- GA -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-59844253-2"></script>
  <script>
    window.imgraetzl.uaid = 'UA-59844253-2';
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('set', 'linker', {'domains': ['imgraetzl.at', 'welocally.at']});
    gtag('consent', 'default', {
        'ad_storage': 'denied',
        'analytics_storage': 'denied'
    });
    gtag('js', new Date());
    <% if current_user %>
      gtag('set', {'user_id': '<%= current_user.id =%>'});
    <% end %>
    gtag('config', window.imgraetzl.uaid, { 'anonymize_ip': true });
  </script>
  <!-- /GA -->

<!-- /Production -->
<% else %>
<!-- Staging & Localhost -->

  <!-- GA -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-59844253-4"></script>
  <script>
    window.imgraetzl.uaid = 'UA-59844253-4';
