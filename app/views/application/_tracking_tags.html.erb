    function gtag(){dataLayer.push(arguments);}
    gtag('set', 'linker', {'domains': ['imgraetzl.at', 'welocally.at']});
    gtag('consent', 'default', {
        'ad_storage': 'denied',
        'analytics_storage': 'denied'
    });
    gtag('js', new Date());
    <% if current_user %>
        gtag('set', {'user_id': '<%= current_user.id =%>'});
    <% end %>
    gtag('config', window.imgraetzl.uaid, { 'anonymize_ip': true });
  </script>
  <!-- /GA -->

<!-- Staging & Localhost -->
<% end %>
