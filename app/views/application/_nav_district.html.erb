<div class="mainNav">
  <%= link_to 'Home', root_path, class: 'homelink' %>
  <div class="graetzlTrigger dropdownTrigger" data-horizontal-offset="0" data-mobileNavID="graetzl">
    <%= icon_tag "arrow-down-2" %>
    <span class="txt"><%= district.name %></span>
  </div>
  <%= link_to wien_path, class: 'bloglink' do %>
    <%= icon_tag "map-location" %>
    <div class="txt">Wien</div>
  <% end %>

  <!-- dropDown -->
  <div class="graetzlContainer jq-dropdown jq-dropdown-tip jq-dropdown-relative jq-dropdown-anchor-left dropdown-container">
    <div class="jq-dropdown-panel nav-graetzl">
      <%= link_to district_path(district) do %>
        <%= icon_tag "home" %> <%= district.name %> (<%= district.numeric %>. Bez.)
      <% end %>
      <%= link_to locations_district_path(district) do %>
        <%= icon_tag "location" %> Anbieter & Locations (<%= district.numeric %>. Bez.)
      <% end %>
      <%= link_to meetings_district_path(district) do %>
        <%= icon_tag "calendar-2" %> Events & Workshops (<%= district.numeric %>. Bez.)
      <% end %>
      <%= link_to rooms_district_path(district) do %>
        <%= icon_tag "raumteiler" %> Raumteiler (<%= district.numeric %>. Bez.)
      <% end %>
      <%= link_to groups_district_path(district) do %>
        <%= icon_tag "speech-bubble" %> Gruppen (<%= district.numeric %>. Bez.)
      <% end %>
      <%= link_to zuckerls_district_path(district) do %>
        <%= icon_tag "shopping-bag" %> Zuckerl & Angebote (<%= district.numeric %>. Bez.)
      <% end %>

      <%= link_to info_path do %>
        <%= icon_tag "lightbulb" %> Mehr Infos
      <% end %>

      <%= link_to "https://blog.imgraetzl.at/", class: 'discover', target: '_blank' do %>
        <%= icon_tag "coffee" %> Blog
      <% end %>
    </div>
  </div>
</div>
