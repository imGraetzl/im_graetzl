<div class="cardBox -toolteiler">
  <div class="cardBoxHeader">
    <div class="coverImgWrapper">
      <%= link_to cover_photo_for(@tool_offer), @tool_offer %>
    </div>
    <div class="priceSheet -variant2">
      <div class="txt">ab</div>
      <div class="price"><%= @tool_offer.daily_price(7).to_i %><sup>€</sup></div>
    </div>
    <div class="categoryicon">
      <%= icon_tag "tacker" %>
    </div>
  </div>

  <div class="cardBoxContent">
    <h3 class="sidebar">Deine Auswahl</h3>

    <ul class="pricing-summary -duration">
      <li>
        <div class="duration">Miete:</div>
        <div class="title">
          <%= l(@calculator.rent_from, format: :short) %> - <%= l(@calculator.rent_to, format: :short) %>
        </div>
      </li>
    </ul>

    <ul class="pricing-summary">
      <li>
        <div class="cost">
          <%= number_to_currency(@calculator.basic_price, unit: "€") %>
        </div>
        <div class="costname">
          <%= @calculator.days %> Tage x <%= number_to_currency(@calculator.daily_price, unit: "€") %>
          <%= render 'shared/questionmark', hint_id: "1", hint_message: 'Das ist der Tagespreis für die Anzahl der Tage die du den Toolteiler mieten möchtest.' %>
        </div>
      </li>
      <li>
        <div class="cost">
          <%= number_to_currency(-@calculator.discount, unit: "€") %>
        </div>
        <div class="costname">
          Rabatt <%= @calculator.days %> Tage
          <% if @tool_offer.two_day_discount? && @tool_offer.weekly_discount? %>
            <%= render 'shared/questionmark', hint_id: "2", hint_message: "Dieser Toolteiler hat #{@tool_offer.two_day_discount}% Rabatt ab einer Miete von 2 Tagen und #{@tool_offer.weekly_discount}% ab einer Miete von einer Woche." %>
          <% elsif @tool_offer.two_day_discount? %>
            <%= render 'shared/questionmark', hint_id: "2", hint_message: "Dieser Toolteiler hat #{@tool_offer.two_day_discount}% Rabatt ab einer Miete von 2 Tagen." %>
          <% elsif @tool_offer.weekly_discount? %>
            <%= render 'shared/questionmark', hint_id: "2", hint_message: "Dieser Toolteiler hat #{@tool_offer.weekly_discount}% Rabatt ab einer Miete von einer Woche." %>
          <% else %>
            <%= render 'shared/questionmark', hint_id: "2", hint_message: "Dieser Toolteiler hat keinen Tages oder Wochenrabatt." %>
          <% end %>
        </div>
      </li>
      <li>
        <div class="cost">
          <%= number_to_currency(@calculator.total_fee, unit: "€") %>
        </div>
        <div class="costname">
          Servicegebühr inkl. Versicherung
          <%= render 'shared/questionmark',hint_id: "3" ,hint_message: 'Beinhaltet die imGrätzl Servicegebühr (inkl. Mwst) und die Toolteiler Versicherung.' %>
        </div>
      </li>
      <li class=sum>
        <div class="cost"><%= number_to_currency(@calculator.total, unit: "€") %></div>
        <div class="costname">Gesamtpreis</div>
      </li>
    </ul>

  </div>
</div>
