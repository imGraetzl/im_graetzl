<%= form_tag [:initiate_eps_payment, @tool_rental], class: 'eps-form', remote: true, data: {
  type: 'json', with_credentials: true, complete_url: complete_eps_payment_tool_rental_url(@tool_rental)
} do %>

  <div class="input-field">
    <%= label_tag :full_name do %>
      <%= icon_tag "user-avatar" %>
      <span>Name</span>
    <% end %>
    <%= text_field_tag :full_name, current_user.full_name, id: 'eps-name' %>
  </div>

  <div class="error-message"></div>

  <%= submit_tag "Buchungsanfrage abschicken", class: 'btn-primary', id: 'eps-submit' %>
<% end %>
