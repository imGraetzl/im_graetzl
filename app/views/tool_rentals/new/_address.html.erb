<div class="address" id="tab-address">

  <div class="hl-subtext">
    <h1>Rechnungsadresse</h1>
    <p>
      Um den Toolteiler anzufragen, gib zun√§chst deine Rechnungsadresse bekannt.
    </p>
  </div>

  <div class="input-field">
    <%= f.label :renter_company do %>
      <%= icon_tag "user-avatar" %>
      <span>Firma</span>
    <% end %>
    <%= f.text_field :renter_company, placeholder: 'Firma (optional)', class: 'renter-company-input' %>
  </div>

  <div class="input-field">
    <%= f.label :renter_name do %>
      <%= icon_tag "user-avatar" %>
      <span>Name</span>
    <% end %>
    <%= f.text_field :renter_name, placeholder: 'Vor- & Nachname', class: 'renter-name-input' %>
  </div>

  <div class="input-field">
    <%= f.label :renter_address do %>
      <%= icon_tag "map-location" %>
      <span>Strasse & Nr.</span>
    <% end %>
    <%= f.text_field :renter_address, placeholder: 'Strasse & Nr.', class: 'renter-address-input' %>
  </div>

  <div class="form-columns">

    <div class="input-field">
      <%= f.label :renter_zip do %>
        <%= icon_tag "map-location" %>
        <span>Postleitzahl</span>
      <% end %>
      <%= f.text_field :renter_zip, placeholder: 'PLZ', class: 'renter-zip-input' %>
    </div>

    <div class="input-field">
      <%= f.label :renter_city do %>
        <%= icon_tag "map-location" %>
        <span>Ort/Stadt</span>
      <% end %>
      <%= f.text_field :renter_city, placeholder: 'Stadt', class: 'renter-city-input' %>
    </div>
  </div>

  <%= button_tag "Weiter", type: 'button', class: 'btn-primary next-screen' %>

</div>
