<div class="filter-categories" data-filter-label="Locations Category">
  <%= collection_check_boxes :filter, :location_category_ids, LocationCategory.all, :id, :name do |b| %>
    <div class="input-checkbox filter-input">
      <%= b.check_box("data-label": b.text) %>
      <%= b.label %>
    </div>
  <% end %>
</div>
