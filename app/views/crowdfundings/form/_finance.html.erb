<div class="form-block">

  <p class="txt"><span>Startdatum</span> und <span>Laufzeit</span></p>

  <div class="form-columns">

    <div class="input-field">
      <%= f.label :startdate do %>
        <%= icon_tag "calendar-2" %>
        <span>Startdatum</span>
      <% end %>
      <%= f.text_field :startdate,
                       value: (I18n.localize(f.object.startdate, format:'%A, %d. %B %Y') if f.object.startdate),
                       data: { value: (I18n.localize(f.object.startdate, format:'%Y-%m-%d') if f.object.startdate) },
                       class: 'datepicker',
                       placeholder: 'wählen' %>
    </div>

    <div class="input-select">
      <%= label_tag :runtime do %>
        <%= icon_tag "time-clock" %>
        <span>Laufzeit</span>
      <% end %>
      <%= f.select :runtime, runtime_values %>
    </div>

  </div>

</div>

