<div class="hl-subtext">
  <h1>Deine <span>Crowdfunding</span> Kampagne</h1>
</div>

<div class="navigation-bar step-nav">

  <%= active_link_to edit_crowdfunding_path(@crowdfunding), class: "iconfilter" do %>
    <%= step_icon(@crowdfunding, 1) %>
    <div class="txt">Projekt<br>Setup</div>
  <% end %>

  <div class="step-line"></div>

  <%= active_link_to description_crowdfunding_path(@crowdfunding), class: "iconfilter" do %>
    <%= step_icon(@crowdfunding, 2) %>
    <div class="txt">Projekt<br>Beschreibung</div>
  <% end %>

  <div class="step-line"></div>

  <%= active_link_to finance_crowdfunding_path(@crowdfunding), class: "iconfilter" do %>
    <%= step_icon(@crowdfunding, 3) %>
    <div class="txt">Projekt<br>Finanzierung</div>
  <% end %>

  <div class="step-line"></div>

  <%= active_link_to rewards_crowdfunding_path(@crowdfunding), class: "iconfilter" do %>
    <%= step_icon(@crowdfunding, 4) %>
    <div class="txt">Projekt<br>Dankesch√∂ns</div>
  <% end %>

  <div class="step-line"></div>

  <%= active_link_to media_crowdfunding_path(@crowdfunding), class: "iconfilter" do %>
    <%= step_icon(@crowdfunding, 5) %>
    <div class="txt">Projekt<br>Medien</div>
  <% end %>

  <div class="step-line"></div>

  <%= active_link_to finish_crowdfunding_path(@crowdfunding), class: "iconfilter" do %>
    <% if @crowdfunding.pending? %>
      <%= icon_tag "slots" %>
    <% elsif @crowdfunding.approved? %>
      <%= icon_tag "check" %>
    <% else %>
      <%= icon_tag "flag" %>
    <% end %>
    <div class="txt">Projekt<br>Freigabe</div>
  <% end %>

</div>

<div id="cf-preview" class="jBoxHidden">
  <iframe id="cfpreview" width="100%" height="100%" src="" frameborder="0" data-url="<%= crowdfunding_url(@crowdfunding, :preview => true) %>"></iframe>
</div>
