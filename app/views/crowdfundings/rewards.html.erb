<% title('Crowdfunding Kampagne bearbeiten') %>

<section class="crowdfunding-form rewards">

  <%= render 'crowdfundings/form/navigation' %>
  <%= render 'crowdfundings/form/rewards_video' %>

  <%= form_for(@crowdfunding) do |f| %>
  <%= form_errors_for @crowdfunding %>

  <%= render 'crowdfundings/form/rewards', f: f %>

  <div class="input-button">
    <%= f.button 'Zwischenspeichern', data: { disable_with: 'speichert...' }, class: 'btn-secondary' %>
    <%= f.button 'Speichern & Weiter zu den Projekt Medien', data: { disable_with: 'speichert...' }, class: 'btn-primary btn-next', name: 'page', value: media_crowdfunding_path(@crowdfunding) %>
  </div>

  <% end %>

</section>
