    <%= link_to subscription.user, rel: 'nofollow' do %>
      <%= avatar_image_with_tooltip subscription.user, size: :thumb, class: 'img-round show-badge' %>
    <% end %>
  </div>
  <div class="tt-content">
    <span><%= link_to subscription.user.full_name, subscription.user, rel: 'nofollow', class:'username' %></span><br>
    <small>FÃ¶rdermitglied seit <%= time_ago_in_words(subscription.created_at) %></small>
    <div class="tt-line -graetzl">
      <%= icon_tag "map-location" %>
