(function() {
  var $cardContainer = $("[data-behavior='activities-card-container']");
  var $paginateLink = $("[data-behavior='activities-paginate-link']");

  <% if params[:page].blank? && @activities.empty? %>
    $cardContainer.html("<%= j render 'empty_message' %>");
  <% elsif params[:page].blank? %>
    $cardContainer.html("<%= j render @activities_with_zuckerls %>");
  <% else %>
    $cardContainer.append("<%= j render @activities %>");
  <% end %>

  <% if @activities.next_page.present? %>
    $paginateLink.attr('href', "<%= raw(next_page_url(@activities)) %>").removeClass("hide");
  <% else %>
    $paginateLink.addClass("hide");
  <% end %>

})();
