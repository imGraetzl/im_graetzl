<% meta(
    title: t('.title', numeric: @district.numeric, name: @district.name),
    description: t('.description', num: @district.graetzls.size, name: @district.name, numeric: @district.numeric),
    robots: 'index, follow',
    og_title: t('.title', numeric: @district.numeric, name: @district.name),
    og_description: t('.description', num: @district.graetzls.size, name: @district.name, numeric: @district.numeric),
    og_image: image_url('meta/og_logo.png')
  )
%>

<%= render 'pagemap' %>

<section class="districts">
  <%= render 'map' %>
  <%= render 'navigation' %>
  <% unless @district.curators.empty? %>
    <div class="graetzl-ambassador">
      Grätzlbotschafter <%= icon_tag "love" %> <%= @district.curators.collect{ |c| link_to(c.name, c.website, target: '_blank') }.to_sentence.html_safe %>
    </div>
  <% end %>

  <div class="block-meetings">
    <div class="hl-subtext">
      <h1>Mach mit - <span>Events &amp; Workshops</span> im <%= @district.numeric %>. Bezirk</h1>
      <p>Lerne dabei nette Menschen aus dem Bezirk <%= @district.name %> kennen</p>
    </div>
    <div class="cardBoxCollection -tripple -morelink">
      <%= render @activity_sample.meetings %>
      <%= render 'meetings/action_card', district: @district, view_all: true %>
    </div>
  </div>
  <div class="block-locations">
    <div class="hl-subtext">
      <h1>Entdecke <span>Anbieter &amp; Locations</span> im <%= @district.numeric %>. Bezirk</h1>
      <p>Finde grätzlansässige Projekte & Selbständige, Vereine & Geschäfte</p>
    </div>
    <div class="cardBoxCollection -tripple -morelink">
      <%= render @activity_sample.locations %>
      <%= render 'locations/action_card', district: @district, view_all: true %>
    </div>
  </div>
  <div class="block-rooms">
    <div class="hl-subtext">
      <h1>Entdecke <span>Raumteiler</span> im <%= @district.numeric %>. Bezirk</h1>
      <p>Gewerbeflächen zum Teilen - Raumhabende und Raumsuchende finden sich</p>
    </div>
    <div class="cardBoxCollection -tripple -morelink">
      <%= render @activity_sample.rooms %>
      <%= render 'rooms/action_card', district: @district, view_all: true %>
    </div>
  </div>
  <div class="block-tools">
    <div class="hl-subtext">
      <h1>Entdecke — <span>Toolteiler</span> im <%= @district.numeric %>. Bezirk</h1>
      <p>Arbeitsequipment leihen & Geräte am Standort nutzen <%= render 'shared/questionmarklink', hint_url: info_toolteiler_path %></p>
    </div>
    <div class="cardBoxCollection -tripple -morelink">
      <%= render @activity_sample.tool_offers %>
      <%= render 'tool_offers/action_card', district: @district, view_all: true %>
    </div>
  </div>
  <div class="block-groups">
    <div class="hl-subtext">
      <h1>Entdecke — <span>Gruppen</span> im Grätzl</h1>
      <p>Vernetze dich mit anderen im <%= @district.numeric %>. Bezirk, tausch dich aus und kooperiere!</p>
    </div>
    <div class="cardBoxCollection -tripple -morelink">
      <%= render @activity_sample.groups %>
      <%= render 'groups/action_card', district: @district, view_all: true, create_link: true %>
    </div>
  </div>
  <div class="block-zuckerls">
    <div class="hl-subtext">
      <h1>Jeden Monat neu - <span>Zuckerl &amp; Angebote</span> im <%= @district.numeric %>. Bezirk</h1>
      <p>Gutscheine, Angebote &amp; Rabattaktionen von Selbständigen, kleinen Unternehmen, Lokalen &amp; Geschäften aus dem Bezirk <%= @district.name %>
    </div>
    <div class="cardBoxCollection -tripple -morelink">
      <%= render @activity_sample.zuckerls %>
      <%= render 'zuckerls/action_card', district: @district, view_all: true %>
    </div>
  </div>
</section>
