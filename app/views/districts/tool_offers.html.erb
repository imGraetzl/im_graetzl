<% meta(
    title: t('.title', numeric: @district.numeric, zip: @district.zip, region: current_region.name),
    description: t('.description', numeric: @district.numeric, name: @district.name, region: current_region.name),
    og_title: t('.title', numeric: @district.numeric, zip: @district.zip, region: current_region.name),
    og_description: t('.description', numeric: @district.numeric, name: @district.name, region: current_region.name),
    og_image: image_url('meta/toolteiler.jpg'),
    robots: 'index, follow'
  )
%>
<% content_for :canonical_url, tool_offers_category_region_path(@category) if @category %>


<section class="districts toolteiler">
  <%= render 'map' %>
  <%= render 'navigation' %>

  <h1 class="hl-main -cards">
    <%= @category ? @category.name : 'Entdecke' %> <span>Toolteiler</span> im <%= @district.numeric %>. Bezirk
  </h1>

  <%= render 'filters/tool_offer_categories' %>

  <%= form_tag tool_offers_path, method: :get, remote: true, class: 'cards-filter' do %>
    <%= hidden_field_tag :category_id, @category.try(:id) %>
  <% end %>

  <div class="card-grid-container">
    <div class="card-grid" data-behavior="tool-offers-card-container"></div>
    <div class="action-card-container" data-behavior="tool-offers-action-card-container">
      <%= render 'tool_offers/action_card', district: @district %>
    </div>
    <%= link_to 'Mehr anzeigen', 'javascript:', remote: true, class: 'link-load hide', data: { disable_with: 'lÃ¤dt...', behavior: 'tool-offers-paginate-link' }, rel: 'nofollow' %>
  </div>

</section>
