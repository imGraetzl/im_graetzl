<% meta(
    title: t('.title'),
    robots: 'noindex, follow'
  )
%>

<section class="room-rental-page payment-screen">

  <div class="col-content">
    <%= render "room_rentals/new/tabs_nav" %>
    <%= render 'room_rentals/new/payment' %>
  </div>

  <div class="col-sidebar">
    <%= render 'room_rentals/new/sidebar' %>

    <div class="footer-txt">
      <strong>Bist du noch unschlüssig und möchtest <%= @room_rental.owner.first_name %>
      zuerst eine Frage stellen</strong>, so gehe direkt
      <%= link_to 'zum Messenger', messenger_start_thread_path(room_rental_id: @room_rental.id) %>.
      Du kannst deine Buchung auch nachher im Messenger starten.
    </div>

  </div>

</section>

<%= javascript_include_tag "https://js.stripe.com/v3/" %>
<script>
  window.stripe = Stripe("<%= Rails.configuration.stripe[:publishable_key] %>", { locale: 'de' });
</script>
