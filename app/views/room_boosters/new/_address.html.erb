<div class="address-container">

  <div class="hl-subtext">
    <h1>Neuer Raumteiler Booster f√ºr</h1>
    <p>
      <%= link_to @room_offer, @room_offer %><br>
      Gib hier deine Rechnungsadresse bekannt:
    </p>
  </div>

  <%= form_for [@room_offer, @room_booster] do |f| %>

    <div class="input-field">
      <%= f.label :company do %>
        <%= icon_tag "user-avatar" %>
        <span>Firma</span>
      <% end %>
      <%= f.text_field :company, placeholder: 'Firma' %>
    </div>

    <div class="input-field">
      <%= f.label :name do %>
        <%= icon_tag "user-avatar" %>
        <span>Vorname</span>
      <% end %>
      <%= f.text_field :name, placeholder: 'Vorname' %>
    </div>

    <div class="input-field">
      <%= f.label :address do %>
        <%= icon_tag "map-location" %>
        <span>Strasse & Nr.</span>
      <% end %>
      <%= f.text_field :address, placeholder: 'Strasse & Nr.' %>
    </div>

    <div class="form-columns">

      <div class="input-field">
        <%= f.label :zip do %>
          <%= icon_tag "map-location" %>
          <span>Postleitzahl</span>
        <% end %>
        <%= f.text_field :zip, placeholder: 'PLZ' %>
      </div>

      <div class="input-field">
        <%= f.label :city do %>
          <%= icon_tag "map-location" %>
          <span>Ort/Stadt</span>
        <% end %>
        <%= f.text_field :city, placeholder: 'Wien' %>
      </div>

    </div>

    <%= submit_tag "Weiter zur Zahlung", class: 'btn-primary' %>

  <% end %>

</div>
