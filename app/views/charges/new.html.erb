<% title('Zahlung') %>

<section class="charges-form">

  <%= form_tag charges_path, id: 'stripeForm' do %>
    <!-- Hidden Fields for STRIPE JS -->
    <%= hidden_field_tag :publishable_key, Rails.configuration.stripe[:publishable_key] %>
    <%= hidden_field_tag :stripeToken %>
    <%= hidden_field_tag :stripeEmail %>
    <%= hidden_field_tag :currentUserEmail, current_user ? current_user.email : '' %>
    <%= hidden_field_tag :stripeDescription, 'Raumteiler Spende' %>

    <div class="input-field">
      <%= label_tag(:amount) do %>
        <%= icon_tag "currency-euro" %>
        <!--<span>Dein Betrag</span>-->
      <% end %>
      <%= text_field_tag :amount, nil, placeholder: "Dein Betrag (z.b. 5,00 â‚¬)", class: 'amount' %>
    </div>
    <%= button_tag 'Weiter zur Zahlung', class: 'btn-primary -mint stripe-submit' %>

  <% end %>
  <!-- STRIPE JS -->
  <script src="https://checkout.stripe.com/checkout.js"></script>
</section>
