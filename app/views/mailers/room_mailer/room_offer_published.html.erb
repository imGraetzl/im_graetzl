<% content_for(:above_title, "Gute Neuigkeiten #{@room_offer.user.first_name},") %>
<% content_for(:title, "Dein Raumteiler ist online!") %>

<table border="0" cellpadding="0" cellspacing="0" style="max-width:600px; margin-bottom:20px;" width="100%" class="mcnTextContentContainer">
  <tr>
    <td style="height:30px"> </td>
  </tr>
  <tr>
    <td valign="top" class="mcnTextContent" style="padding-top:0;  padding-bottom:9px; padding-left:18px; padding-right:18px;">
      <h4 style="color:#69a8a7; font-family:Georgia; font-size:125%; font-weight:normal; font-style:italic; text-align:left;">
        <%= I18n.t("activerecord.attributes.room_offer.offer_types.#{@room_offer.offer_type}") %>
      </h4>
    </td>
  </tr>
  <tr>
    <td style="padding-left:9px; padding-right:9px;">
      <table class="mcnDividerContent" border="0" cellpadding="0" cellspacing="0" width="100%">
        <tr>
          <td>
            <span></span>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<!-- --------------- ITEM ROOM OFER --------------- -->

<table border="0" cellpadding="0" cellspacing="0" style="float:left; max-width:300px; margin-bottom:20px; border-bottom-width: 1px;border-bottom-style: dashed;border-bottom-color: #efefef;" width="100%" class="mcnTextContentContainer">
  <tbody>
    <tr>
      <td valign="top" class="mcnTextContent" style="padding-top:0; padding-left:18px; padding-bottom:18px; padding-right:18px;">
        <table>
          <tr>
            <td>
              <%= avatar_image @room_offer.user, size: :thumb, style: "width:40px; height:40px; border-radius: 22px; max-width:40px; min-width:40px; border: 1px solid #83C7BD; background-color: #ffffff; padding: 2px;", class: "mcnImage" %>
            </td>
            <td>
            </td>
            <td>
              <em style="font-weight:bold;"><%= @room_offer.user.first_name %></em>
            </td>
          </tr>
        </table>

        <%= link_to room_offer_url(@room_offer, host: @room_offer.region.host), target: 'blank' do %>
          <%= cover_photo_image @room_offer, size: :small, style: "width:100%; padding-bottom:5px; padding-top:10px;", class: "mcnImage" %>
        <% end %>

        <p>
          <%= @room_offer.slogan %>
        </p>
      </td>
    </tr>

    <tr>
      <td>
        <%= render 'mailers/shared/button', title: "Raum ansehen", url: room_offer_url(@room_offer, host: @room_offer.region.host) %>
      </td>
    </tr>
  </tbody>
</table>

<% if @room_offer.region.id == 'wien' %>

<!-- --------------- BLOCK HEADLINE --------------- -->
<table border="0" cellpadding="0" cellspacing="0" style="max-width:600px; margin-bottom:20px;" width="100%" class="mcnTextContentContainer">
  <tr>
    <td style="height:30px"> </td>
  </tr>
  <tr>
    <td valign="top" class="mcnTextContent" style="padding-top:0;  padding-bottom:9px; padding-left:18px; padding-right:18px;">
      <h4 style="color:#69a8a7; font-family:Georgia; font-size:125%; font-weight:normal; font-style:italic; text-align:left;">
        Jetzt neu - Der Raumteiler Booster!
      </h4>
    </td>
  </tr>
  <tr>
    <td style="padding-left:9px; padding-right:9px;">
      <table class="mcnDividerContent" border="0" cellpadding="0" cellspacing="0" width="100%" >
        <tr>
          <td>
            <span></span>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<!-- --------------- ITEM SINGLE GROUP MEETING --------------- -->

<table border="0" cellpadding="0" cellspacing="0" style="max-width:600px; margin-bottom:20px; border-bottom-width: 1px;border-bottom-style: dashed;border-bottom-color: #efefef;" width="100%" class="mcnTextContentContainer">
  <tbody>
    <tr>
      <td valign="top" class="mcnTextContent" style="padding-top:0; padding-left:18px; padding-bottom:18px; padding-right:18px;">
        <a href="<%= room_boosters_user_url(host: @room_offer.region.host) %>" target="_blank">
          <%= image_tag "illu/illu-ideen-weissbg.png", style: "width:200px; padding-bottom:10px; padding-top:10px; padding-right:20px; float:left;", class: "mcnImage" %>
        </a>
        <p>
          <strong>Tipp für maximale Sichtbarkeit - Der Raumteiler Booster:</strong>
        </p>
        <p>
          Hol dir eine Woche die volle Sichtbarkeit für deinen Raumteiler auf der Plattform und in allen Newslettern in ganz Wien.
        </p>

        <%= render 'mailers/shared/button', title: "Zum Raumteiler Booster", url: "#{room_boosters_user_url(host: @room_offer.region.host)}", style: "width:100%;" %>

      </td>

      <td>
      </td>
    </tr>
  </tbody>
</table>

<% end %>
