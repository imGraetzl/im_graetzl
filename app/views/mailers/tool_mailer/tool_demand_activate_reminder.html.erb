<% content_for(:above_title, "Hallo #{@tool_demand.user.first_name},") %>
<% content_for(:title, "Deine Toolsuche wurde deaktiviert.") %>

<table border="0" cellpadding="0" cellspacing="0" style="max-width:600px; margin-bottom:20px;" width="100%" class="mcnTextContentContainer">
  <tr>
    <td style="height:30px"> </td>
  </tr>
  <tr>
    <td valign="top" class="mcnTextContent" style="padding-top:0;  padding-bottom:9px; padding-left:18px; padding-right:18px;">
      <h4 style="color:#69a8a7; font-family:Georgia; font-size:125%; font-weight:normal; font-style:italic; text-align:left;">
        Toolsuche erneut aktivieren?
      </h4>
    </td>
  </tr>
  <tr>
    <td style="padding-left:9px; padding-right:9px;">
      <table class="mcnDividerContent" border="0" cellpadding="0" cellspacing="0" width="100%">
        <tr>
          <td>
            <span></span>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>


<table border="0" cellpadding="0" cellspacing="0" style="max-width:600px; border-bottom-width: 1px;border-bottom-style: dashed;border-bottom-color: #efefef; margin-bottom:18px;" width="100%" class="mcnTextContentContainer">
  <tbody>
    <tr>
      <td valign="center" class="mcnTextContent" style="padding-left:18px; padding-right:18px;">
        <%= avatar_image @tool_demand.user, size: :small, style: "width:120px; height:120px; border-radius: 60px; max-width:120px; min-width:120px;", class: "mcnImage" %>
      </td>
      <td valign="center" class="mcnTextContent" width="100%">
        <p>
          <%= link_to @tool_demand.slogan, tool_demand_url(@tool_demand), style: "color:#ec776a;" %>
        </p>
        <p>
          <em>
          Benötigter Zeitraum zwischen:<br>
          <%= I18n.localize(@tool_demand.usage_period_from, format:'%a %d. %b %Y') if @tool_demand.usage_period_from %> und
          <%= I18n.localize(@tool_demand.usage_period_to, format:'%a %d. %b %Y') if @tool_demand.usage_period_to %>
          </em>
        </p>
      </td>
    </tr>
    <tr>
      <td colspan="2" class="mcnTextContent" style="padding-left:18px; padding-right:18px;">
        <p>Logge dich jetzt ein, um deine Toolsuche zu bearbeiten und diese erneut zu aktivieren.</p>
      </td>
    </tr>
    <tr>
      <td colspan="2" style="padding-top:20px;">
        <%= render 'mailers/shared/button', title: "Zur Toolsuche", url: tool_demand_url(@tool_demand), style: "width:100%;" %>
      </td>
    </tr>
  </tbody>
</table>
