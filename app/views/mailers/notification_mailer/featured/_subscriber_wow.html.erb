<% user_id, name, url = wow.values_at(:user_id, :name, :url) %>
<table border="0" cellpadding="0" cellspacing="0" style="width:94px !important; float:left; box-sizing: border-box; margin-bottom:10px;">
  <tr>
    <td style="height:50px; text-align:center;">
      <picture class="user">
        <%= link_to(image_tag("supporter/wow/user_#{user_id}.jpg", loading: 'lazy', style: "width:50px; height:50px; border-radius:28px; border: 1px solid #83C7BD; background-color: #ffffff; padding: 2px;"), url, target: '_blank', rel: 'noopener') %>
      </picture>
    </td>
  </tr>
  <tr>
    <td style="line-height:16px; vertical-align:top; text-align:center; font-size:12px;">
      <%= link_to name, url, target:'_blank', style: "color:#333; text-decoration:none;" %>
    </td>
  </tr>
</table>
