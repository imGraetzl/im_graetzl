<table border="0" cellpadding="0" cellspacing="0" style="width:94px !important; float:left; box-sizing: border-box; margin-bottom:10px;">
  <tr>
    <td style="height:50px;">
      <%= link_to subscription.user do %>
        <%= avatar_image subscription.user, size: :thumb, style: "width:50px; height:50px; border-radius:25px;" %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td style="height:40px; line-height:16px; vertical-valign:center; text-align:center; font-size:12px;">
      <%= link_to subscription.user.full_name, subscription.user, target:'_blank', style: "color:#ec776a;" %>
    </td>
  </tr>
</table>
