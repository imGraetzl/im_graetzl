<%= render 'summary/block_header', title: "Neuigkeiten, Aktionen & Updates" %>

<table border="0" cellpadding="0" cellspacing="0" style="max-width:600px; border-bottom-width: 1px;border-bottom-style: dashed;border-bottom-color: #efefef; margin-bottom:18px;" width="100%" class="mcnTextContentContainer">
  <tbody>
    <tr>
      <td valign="center" class="mcnTextContent" style="padding-left:18px; padding-right:18px;">
        <%= avatar_image @featured_discussion.user, size: :small, style: "width:120px; height:120px; border-radius: 60px; max-width:120px; min-width:120px;", class: "mcnImage" %>
      </td>
      <td valign="center" class="mcnTextContent" width="100%">
        <p>
          <em>
            <strong><%= @featured_discussion.user.first_name %></strong>
            hat ein neues Thema erstellt:
          </em>
          <br>
        </p>
        <p>
          <%= link_to @featured_discussion.title, group_discussion_url(@featured_discussion.group, @featured_discussion, target: "topic"), style: "color:#ec776a; font-size:18px;" %>
        </p>
      </td>
    </tr>

    <tr>
      <td colspan="2" style="padding-bottom:9px;"></td>
    </tr>

    <tr>
      <td colspan="2" class="mcnTextContent" style="padding-bottom:18px; padding-left:18px; padding-right:18px;">
        <p>
          <%= strip_tags(@featured_discussion.first_post.content.bbcode_to_html).truncate(300) %>
        </p>
      </td>
    </tr>

    <tr>
      <td colspan="2">
        <%= render 'mailers/shared/button', title: "Thema ansehen", url: group_discussion_url(@featured_discussion.group, @featured_discussion, target: "topic") %>
      </td>
    </tr>

  </tbody>
</table>
