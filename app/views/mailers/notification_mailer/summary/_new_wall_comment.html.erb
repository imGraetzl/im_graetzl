<table border="0" cellpadding="0" cellspacing="0" style="max-width:600px; border-bottom-width: 1px;border-bottom-style: dashed;border-bottom-color: #efefef; margin-bottom:18px;" width="100%" class="mcnTextContentContainer">
  <tbody>
    <tr>
      <td valign="center" class="mcnTextContent" style="padding-left:18px; padding-right:18px;">
        <%= image_tag Notifications::ImageService.new.avatar_url(notification.activity.owner), style: "width:60px; height:60px; border-radius: 30px; max-width:60px; min-width:60px;", class: 'mcnImage' %>
      </td>

      <td class="mcnTextContent" style="padding-right:18px; width:100%;">
        <p>
          <em><strong>
            <%= notification.activity.owner.username %>:
          </strong></em>
          <br>
          <%= notification.comment.content.truncate(255, separator: ' ') %>
        </p>
      </td>
    </tr>

    <tr>
      <td colspan="2" style="padding-bottom:9px;"></td>
    </tr>

    <tr>
      <td colspan="2">
        <%= render 'mailers/shared/button', title: "Zu deiner Pinnwand", url: graetzl_user_url(notification.activity.trackable.graetzl, notification.activity.trackable, target: "comment_#{notification.comment.id}") %>
      </td>
    </tr>

</tbody></table>
