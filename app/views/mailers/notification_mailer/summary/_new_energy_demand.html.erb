<table border="0" cellpadding="0" cellspacing="0" style="max-width:600px; border-bottom-width: 1px;border-bottom-style: dashed;border-bottom-color: #efefef; margin-bottom:18px;" width="100%" class="mcnTextContentContainer">
  <tbody>

    <tr>
      <td valign="center" class="mcnTextContent" style="padding-left:18px; padding-right:18px;">

        <%= link_to energy_demand_url(notification.energy_demand), target: "_blank" do %>
          <%= avatar_image notification.energy_demand, size: :small, style: "width:120px; height:120px; border-radius: 60px; max-width:120px; min-width:120px;", class: "mcnImage" %>
        <% end %>

      </td>

      <td valign="center" class="mcnTextContent" width="100%">
        <p>
          <em><strong>
            <%= I18n.t("activerecord.attributes.energy_demand.energy_types.cardbox.#{notification.energy_demand.energy_type}") %>
          </strong></em>
        </p>

        <p>
          <%= link_to notification.energy_demand.title, energy_demand_url(notification.energy_demand), style: "color:#ec776a; font-size:18px;" %>
        </p>
      </td>
    </tr>

    <tr>
      <td colspan="2" style="padding-bottom:9px;"></td>
    </tr>

    <tr>
      <td colspan="2" class="mcnTextContent" style="padding-bottom:18px; padding-left:18px; padding-right:18px;">
        <p>
          <%= notification.energy_demand.description.truncate(255, separator: ' ') %>
        </p>
      </td>
    </tr>

  </tbody>
</table>
