<table border="0" cellpadding="0" cellspacing="0" style="max-width:600px; border-bottom-width: 1px;border-bottom-style: dashed;border-bottom-color: #efefef; margin-bottom:18px;" width="100%" class="mcnTextContentContainer">
  <tbody>

    <tr>
      <td valign="center" class="mcnTextContent" style="padding-left:18px; padding-right:18px;">
        <%= image_tag Notifications::ImageService.new.avatar_url(notification.location), style: "width:120px; height:120px; border-radius: 10px; max-width:120px; min-width:120px;", class: "mcnImage" %>
      </td>

      <td valign="center" class="mcnTextContent" width="100%">
        <p>
          <em><strong><%= notification.location.name %>:</strong></em>
        </p>
        <p>
          <%= link_to notification.location_post.title, graetzl_location_url(notification.location.graetzl, notification.location, target: dom_id(notification.location_post)), style:"color:#ec776a; font-size:18px;" %>
        </p>
      </td>
    </tr>

    <tr>
      <td colspan="2" style="padding-bottom:9px;">
      </td>
    </tr>

    <tr>
      <td colspan="2" class="mcnTextContent" style="padding-bottom:18px; padding-left:18px; padding-right:18px;">
        <p>
          <%= notification.location_post.content.truncate(255, separator: ' ') %>
        </p>
      </td>
    </tr>

  </tbody>
</table>
