<table align="left" border="0" cellpadding="0" cellspacing="0" style="max-width:300px; margin-bottom:20px; border-bottom-width: 1px;border-bottom-style: dashed;border-bottom-color: #efefef;" width="100%" class="mcnTextContentContainer">
  <tbody>

    <tr>
      <td valign="top" class="mcnTextContent" style="padding-top:0; padding-left:18px; padding-bottom:18px; padding-right:18px;">
        <table>
          <tr>
            <td>
              <%= image_tag Notifications::ImageService.new.avatar_url(notification.room_offer), style: "width:30px; height:30px; border-radius: 15px; max-width:30px; min-width:30px;", class: "mcnImage" %>
            </td>
            <td>Â 
            </td>
            <td>
              <em style="font-weight:bold;">
                Biete <%= I18n.t("activerecord.attributes.room_offer.offer_types_active.#{notification.room_offer.offer_type}") %>
              </em>
            </td>
          </tr>
        </table>

        <%= link_to room_offer_url(notification.room_offer), target: "_blank" do %>
          <%= image_tag Notifications::ImageService.new.cover_photo_url(notification.room_offer), style: "width:100%; padding-bottom:5px; padding-top:10px;", class: "mcnImage" %>
        <% end %>

        <p>
          <%= notification.room_offer.slogan %>
        </p>
      </td>
    </tr>

    <tr>
      <td>
        <%= render 'mailers/shared/button', title: "Raum ansehen", url: room_offer_url(notification.room_offer) %>
      </td>
    </tr>

  </tbody>
</table>
