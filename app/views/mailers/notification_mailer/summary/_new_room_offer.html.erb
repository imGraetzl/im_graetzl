<table border="0" cellpadding="0" cellspacing="0" style="float:left; max-width:300px; margin-bottom:20px; border-bottom-width: 1px;border-bottom-style: dashed;border-bottom-color: #efefef;" width="100%" class="mcnTextContentContainer">
  <tbody>

    <tr>
      <td valign="top" class="mcnTextContent" style="padding-top:0; padding-left:18px; padding-right:18px;">
        <table>
          <tr>
            <td>
              <%= avatar_image notification.room_offer, size: :thumb, style: "width:40px; height:40px; border-radius: 22px; max-width:40px; min-width:40px; border: 1px solid #83C7BD; background-color: #ffffff; padding: 2px;", class: "mcnImage" %>
            </td>
            <td>Â 
            </td>
            <td style="line-height:1.2;">
              <em style="font-weight:bold;">
                Biete <%= I18n.t("activerecord.attributes.room_offer.offer_types_active.#{notification.room_offer.offer_type}") %><br>
                <small style="font-weight:normal; color: #555;"><%= "#{notification.room_offer.graetzl.district.zip}, " if @region.use_districts? %><%= notification.room_offer.graetzl.name.truncate(30, separator: ' ') %></small>
              </em>
            </td>
          </tr>
        </table>

        <%= link_to room_offer_url(notification.room_offer), target: "_blank" do %>
          <%= cover_photo_image notification.room_offer, size: :small, style: "width:100%; padding-bottom:3px; padding-top:10px;", class: "mcnImage" %>
        <% end %>

        <p style="min-height:75px; max-height:75px; overflow: hidden; text-overflow: ellipsis;"><%= notification.room_offer.slogan.truncate(110, separator: ' ') %></p>

      </td>
    </tr>

    <tr>
      <td>
        <%= render 'mailers/shared/button', title: "Raum ansehen", url: room_offer_url(notification.room_offer), style: "width:100%;" %>
      </td>
    </tr>

  </tbody>
</table>
