<table border="0" cellpadding="0" cellspacing="0" style="max-width:600px; margin-bottom:20px; border-bottom-width: 1px;border-bottom-style: dashed;border-bottom-color: #efefef;" width="100%" class="mcnTextContentContainer">
  <tbody>

    <tr>
      <td colspan="2" valign="center" class="mcnTextContent" style="padding-left:18px; padding-right:18px;">
        <p>
          <%= link_to meeting.name.truncate(70, separator: ' '), graetzl_meeting_url(meeting.graetzl, meeting), style: "color:#ec776a; font-size:18px;"%>
        </p>
      </td>
    </tr>

    <tr>
      <td valign="top" align="center" class="mcnTextContent" style="padding-top:0; padding-left:18px; padding-right:18px; padding-bottom:18px; text-align:center; display: flex; flex-wrap: wrap; justify-content:start;">

      <% notifications.each do |notification| %>
        <table border="0" cellpadding="0" cellspacing="0" style="width:94px !important; float:left; box-sizing: border-box; margin-bottom:10px;">
          <tr>
            <td style="height:50px; text-align:center;">
              <%= link_to notification.going_to.user do %>
                <%= avatar_image notification.going_to.user, size: :thumb, style: "width:40px; height:40px; border-radius: 22px; max-width:40px; min-width:40px; border: 1px solid #83C7BD; background-color: #ffffff; padding: 2px;", class: "mcnImage" %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td style="line-height:16px; vertical-align:top; text-align:center; font-size:12px;">
              <%= link_to notification.going_to.user, notification.going_to.user, target:'_blank', style: "color:#333; text-decoration:none;" %>
            </td>
          </tr>
        </table>
      <% end %>

      </td>
    </tr>

    <tr>
      <td>
        <%= render 'mailers/shared/button', title: "Treffen ansehen", url: graetzl_meeting_url(meeting.graetzl, meeting) %>
      </td>
    </tr>
  </tbody>
</table>
