<table border="0" cellpadding="0" cellspacing="0" style="float:left; max-width:300px; margin-bottom:20px; border-bottom-width: 1px;border-bottom-style: dashed;border-bottom-color: #efefef;" width="100%" class="mcnTextContentContainer">
  <tbody>

    <tr>
      <td valign="top" class="mcnTextContent" style="padding-top:0; padding-left:18px; padding-right:18px;">
        <table>
          <tr>
            <td>
              <%= avatar_image notification.meeting.user, size: :thumb, style: "width:30px; height:30px; border-radius: 15px; max-width:30px; min-width:30px;", class: "mcnImage" %>
            </td>
            <td>Â </td>
            <td style="font-size:12px; line-height:16px;">
              <%= link_to notification.meeting.user.username, user_url(notification.meeting.user), style: "color:#ec776a; font-size:12px;" %>
              <br>
              <%= I18n.localize(notification.meeting.starts_at_date, format:'%A %d. %B') if notification.meeting.starts_at_date.present? %>
              <% if notification.meeting.meeting_additional_dates.present? %>
              <em>+ <%= notification.meeting.meeting_additional_dates.count %> weitere</em>
              <% end %>
            </td>
          </tr>
        </table>

        <%= link_to graetzl_meeting_url(notification.meeting.graetzl, notification.meeting), target: "_blank" do %>
          <%= cover_photo_image(notification.meeting, size: :small, style: "width:100%; padding-bottom:10px; padding-top:10px;", class: "mcnImage") %>
        <% end %>

        <p style="min-height:55px;"><%= notification.meeting.name.truncate(70, separator: ' ') %></p>
      </td>
    </tr>

    <tr>
      <td>
        <%= render 'mailers/shared/button', title: "Treffen ansehen", url: graetzl_meeting_url(notification.meeting.graetzl, notification.meeting), style: "width:100%;" %>
      </td>
    </tr>

  </tbody>
</table>
