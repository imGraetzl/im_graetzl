<table border="0" cellpadding="0" cellspacing="0" style="max-width:600px; border-bottom-width: 1px;border-bottom-style: dashed;border-bottom-color: #efefef; margin-bottom:18px;" width="100%" class="mcnTextContentContainer">
  <tbody>
    <tr>
      <td valign="center" class="mcnTextContent" style="padding-left:18px; padding-right:18px;">
        <%= link_to graetzl_location_url(notification.location.graetzl, notification.location), target: "_blank" do %>
          <%= avatar_image notification.location, size: :small, style: "width:120px; height:120px; border-radius: 10px; max-width:120px; min-width:120px;", class: "mcnImage" %>
        <% end %>
      </td>
      <td valign="center" class="mcnTextContent" width="100%">
        <p>
          <%= link_to notification.location.name, graetzl_location_url(notification.location.graetzl, notification.location), style: "color:#ec776a; font-size:18px;" %>
          <br>
          <%= notification.location.full_address %>
        </p>
        <p>
          <em><%= notification.location.slogan %></em>
        </p>
      </td>
    </tr>
    <tr>
      <td colspan="2" style="padding-bottom:25px;">
      </td>
    </tr>
  </tbody>
</table>
