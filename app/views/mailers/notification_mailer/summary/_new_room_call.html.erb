<table border="0" cellpadding="0" cellspacing="0" style="float:left; max-width:300px; margin-bottom:20px; border-bottom-width: 1px;border-bottom-style: dashed;border-bottom-color: #efefef;" width="100%" class="mcnTextContentContainer">
  <tbody>

    <tr>
      <td valign="top" class="mcnTextContent" style="padding-top:0; padding-left:18px; padding-bottom:18px; padding-right:18px;">
        <table>
          <tr>
            <td>
              <%= image_tag Notifications::ImageService.new.avatar_url(notification.room_call), style: "width:30px; height:30px; border-radius: 15px; max-width:30px; min-width:30px", class: "mcnImage" %>
            </td>
            <td>
            </td>
            <td>
              <em style="font-weight:bold;">OPEN CALL</em>
            </td>
          </tr>
        </table>

        <%= link_to room_call_url(notification.room_call), target: '_blank' do %>
          <%= image_tag Notifications::ImageService.new.cover_photo_url(notification.room_call), style: "width:100%; padding-bottom:5px; padding-top:10px;", class: "mcnImage" %>
        <% end %>

        <p>
          <%= notification.room_call.title %>
        </p>
      </td>
    </tr>

    <tr>
      <td>
        <%= render 'mailers/shared/button', title: "Zum Call", url: room_call_url(notification.room_call) %>
      </td>
    </tr>

  </tbody>
</table>
