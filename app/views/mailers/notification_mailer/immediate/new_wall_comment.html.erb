<% content_for(:above_title, "Hallo #{@user.first_name},") %>
<% content_for(:title, "Schau mal - Es gibt Neuigkeiten aus dem Grätzl #{@user.graetzl.name} für dich:") %>

<table align="left" border="0" cellpadding="0" cellspacing="0" style="max-width:600px; margin-bottom:20px;" width="100%" class="mcnTextContentContainer">
  <tr>
    <td style="height:30px"> </td>
  </tr>
  <tr>
    <td valign="top" class="mcnTextContent" style="padding-top:0;  padding-bottom:9px; padding-left:18px; padding-right:18px;">
      <h4 style="color:#69a8a7; font-family:Georgia; font-size:125%; font-weight:normal; font-style:italic; text-align:left;">
        Deine Pinnwand wurde kommentiert
      </h4>
    </td>
  </tr>
  <tr>
    <td style="padding-left:9px; padding-right:9px;">
      <table class="mcnDividerContent" border="0" cellpadding="0" cellspacing="0" width="100%">
        <tr>
          <td>
            <span></span>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<!-- ITEM mit inline CSS -->
<table style="margin-bottom:35px;">
  <tr>
    <td valign="top" style="width:50px;">
      <%= image_tag Notifications::ImageService.new.avatar_url(@notification.activity.owner), style: "width: 40px; height: 40px; border-radius: 20px; display: block;" %>
    </td>
    <td valign="top" style="color:#444444; font-family:Helvetica;">
      <em><strong style="line-height:40px;">
        Neuer Kommentar von
        <%= link_to @notification.activity.owner.username, user_url(@notification.activity.owner), style: "color:#f48a85; font-weight:bold;" %>
      </strong></em>

      <p style="margin-top:12px;">
        <%= @notification.comment.content.truncate(255, separator: ' ') %>
      </p>

      <table border="0" cellpadding="0" cellspacing="0" style="border-collapse: separate !important;border: 2px solid #64A8A7;border-top-left-radius: 6px;border-top-right-radius: 6px;border-bottom-right-radius: 6px;border-bottom-left-radius: 6px;background-color: #64A8A7;">
        <tr>
          <td style="font-family: Arial; font-size: 14px; padding: 8px;">
            <%= link_to "Beitrag lesen", graetzl_user_url(@notification.activity.trackable.graetzl, @notification.activity.trackable, anchor: "comment-#{@notification.comment.id}"), style:"color: #FFFFFF; text-decoration: none;", target: "_blank" %>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
