<% content_for(:above_title, "Hallo #{@user.first_name},") %>
<% content_for(:title, "Schau mal - Es gibt Neuigkeiten #{t("region.#{@region.id}.from_graetzl")} #{@notification.room_offer.graetzl.name} für dich:") %>

<table border="0" cellpadding="0" cellspacing="0" style="max-width:600px; margin-bottom:20px;" width="100%" class="mcnTextContentContainer">
  <tr>
    <td style="height:30px"> </td>
  </tr>
  <tr>
    <td valign="top" class="mcnTextContent" style="padding-top:0;  padding-bottom:9px; padding-left:18px; padding-right:18px;">
      <h4 style="color:#69a8a7; font-family:Georgia; font-size:125%; font-weight:normal; font-style:italic; text-align:left;">
        <%= link_to @notification.room_offer.user.first_name, user_url(@notification.room_offer.user), style: "color:#f48a85;" %>
        bietet <%= I18n.t("activerecord.attributes.room_offer.offer_types_active.#{@notification.room_offer.offer_type}") %>
      </h4>
    </td>
  </tr>
  <tr>
    <td style="padding-left:9px; padding-right:9px;">
      <table class="mcnDividerContent" border="0" cellpadding="0" cellspacing="0" width="100%">
        <tr>
          <td>
            <span></span>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<table border="0" cellpadding="0" cellspacing="0" style="float:left; max-width:300px; margin-bottom:20px; border-bottom-width: 1px;border-bottom-style: dashed;border-bottom-color: #efefef;" width="100%" class="mcnTextContentContainer">
  <tbody>

    <tr>
      <td valign="top" class="mcnTextContent" style="padding-top:0; padding-left:18px; padding-bottom:18px; padding-right:18px;">
        <table>
          <tr>
            <td>
              <%= avatar_image @notification.room_offer, size: :thumb, style: "width:40px; height:40px; border-radius: 20px; max-width:40px; min-width:40px;", class: "mcnImage" %>
            </td>
            <td> 
            </td>
            <td>
              <em style="font-weight:bold;">
                Biete <%= I18n.t("activerecord.attributes.room_offer.offer_types_active.#{@notification.room_offer.offer_type}") %>
              </em>
            </td>
          </tr>
        </table>

        <%= link_to room_offer_url(@notification.room_offer), target: "_blank" do %>
          <%= cover_photo_image(@notification.room_offer, size: :small, style: "width:100%; padding-bottom:5px; padding-top:10px;", class: "mcnImage") %>
        <% end %>

        <p>
          <%= @notification.room_offer.slogan %>
        </p>
      </td>
    </tr>

    <tr>
      <td>
        <%= render 'mailers/shared/button', title: "Raum ansehen", url: room_offer_url(@notification.room_offer), style: "width:100%;" %>
      </td>
    </tr>

  </tbody>
</table>
