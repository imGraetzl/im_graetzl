<% content_for(:above_title, "Hallo #{@location.user.first_name},") %>
<% content_for(:title, "Ist dein Goodie für #{t("region.#{@location.region.id}.domain_short")} Mitglieder noch aktuell?") %>

<table border="0" cellpadding="0" cellspacing="0" style="max-width:600px; margin-bottom:20px;" width="100%" class="mcnTextContentContainer">
  <tr>
    <td style="height:30px"> </td>
  </tr>
  <tr>
    <td valign="top" class="mcnTextContent" style="padding-top:0;  padding-bottom:9px; padding-left:18px; padding-right:18px;">
      <h4 style="color:#69a8a7; font-family:Georgia; font-size:125%; font-weight:normal; font-style:italic; text-align:left;">
        Dein letztes Goodie Update ist schon eine Weile her ...
      </h4>
    </td>
  </tr>
  <tr>
    <td style="padding-left:9px; padding-right:9px;">
      <table class="mcnDividerContent" border="0" cellpadding="0" cellspacing="0" width="100%">
        <tr>
          <td>
            <span></span>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<!-- --------------- ITEM ACTION BOX --------------- -->
<table border="0" cellpadding="0" cellspacing="0" style="float:left; max-width:300px; margin-bottom:20px;" width="100%" class="mcnTextContentContainer">
  <tbody>
    <tr>
      <td valign="top" class="mcnTextContent" style="padding-top:0; padding-left:18px; padding-bottom:18px; padding-right:18px;">
        Falls dein Goodie nicht mehr aktuell ist oder du ein neues Goodie hast, dann aktualisiere dieses gleich.
        <br><br>
        Dadurch wird dein Schaufenster auf <%= t("region.#{@location.region.id}.domain_full") %> außerdem gleich wieder vorgereiht.
      </td>
    </tr>
    <tr>
      <td>
        <%= render 'mailers/shared/button', title: "Goodie aktualisieren", url: edit_location_url(@location), style: "width:100%;" %>
      </td>
    </tr>
  </tbody>
</table>

<!-- --------------- OLD MEETING PREVIEW --------------- -->
<table border="0" cellpadding="0" cellspacing="0" style="float:left; max-width:300px; margin-bottom:20px;" width="100%" class="mcnTextContentContainer">
  <tbody>
    <tr>
      <td valign="top" class="mcnTextContent" style="padding-top:0; padding-left:18px; padding-right:18px;">
        <table>
          <tr>
            <td>
              <%= avatar_image @location, size: :thumb, style: "width:60px; height:60px; border-radius: 5px; max-width:60px; min-width:60px; border: 1px solid #83C7BD; background-color: #ffffff; padding: 2px;", class: "mcnImage" %>
            </td>
            <td> </td>
            <td style="font-size:13px; line-height:18px;">
              <%= link_to @location.name, graetzl_location_url(@location.graetzl, @location), target: "_blank", style: "color:#ec776a; font-size:13px;" %>
            </td>
          </tr>
        </table>
        <p>
          <strong><em>Dein aktuelles Goodie:</em></strong><br>
          "<em><%= @location.goodie %></em>"
        </p>
      </td>
    </tr>
  </tbody>
</table>

<table border="0" cellpadding="0" cellspacing="0" style="max-width:600px; margin-bottom:20px;border-top-width: 1px;border-top-style: dashed;border-top-color: #efefef;" width="100%" class="mcnTextContentContainer">
  <tr>
    <td class="mcnTextContent" style="padding-top:10px; padding-left:18px; padding-right:18px;">
      Liebe Grüße<br>
      dein <%= t("region.#{@location.region.id}.domain_short") %> Team
    </td>
  </tr>
</table>

<%= render 'mailers/notification_mailer/featured/raumbooster_weekly' if @region.hot_august? %>
