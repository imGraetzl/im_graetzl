 <table border="0" cellpadding="0" cellspacing="0" style="max-width:100%; min-width:100%;" width="100%" class="mcnTextContentContainer">
   <tbody>
     <tr>
       <td valign="top" class="mcnTextContent" style="padding-top:0; padding-right:18px; padding-bottom:9px; padding-left:18px;">

         <table>

           <tr>
             <td><strong><%= @crowd_donation_pledge.crowd_donation&.title %></strong></td>
           </tr>

           <% if @crowd_donation_pledge.crowd_donation.startdate || @crowd_donation_pledge.crowd_donation.enddate %>
             <tr>
               <td><em>Benötigt im Zeitraum:</em></td>
             </tr>
             <% if @crowd_donation_pledge.crowd_donation.startdate %>
             <tr>
               <td><em>Ab frühestens: <%= I18n.localize(@crowd_donation_pledge.crowd_donation.startdate, format:'%d.%m.%y') %></em></td>
             </tr>
             <% end %>
             <% if @crowd_donation_pledge.crowd_donation.enddate %>
             <tr>
               <td><em>Bis spätestens: <%= I18n.localize(@crowd_donation_pledge.crowd_donation.enddate, format:'%d.%m.%y') %></em></td>
             </tr>
           <% end %>

           <% if @crowd_donation_pledge.answer.present? %>
            <tr>
              <td>
                <small>Deine Antwort: <em><%= @crowd_donation_pledge.answer %></em>
                </small>
              </td>
            </tr>
           <% end %>

           <tr>
             <td></td>
           </tr>
           <% end %>

         </table>

       </td>
     </tr>
   </tbody>
 </table>

