      <%= render 'mailers/admin_mailer/daily_mail_trow', title: "Habe Gerät | Active", collection: ToolOffer.enabled, sum: true %>
      <%= render 'mailers/admin_mailer/daily_mail_trow', title: "Suche Gerät", collection: ToolOffer %>
      <%= render 'mailers/admin_mailer/daily_mail_trow', title: "Suche Gerät | Active", collection: ToolDemand.enabled, sum: true %>
