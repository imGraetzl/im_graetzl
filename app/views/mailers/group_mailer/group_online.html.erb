 </table>

<!-- --------------- ITEM GROUP NEW --------------- -->
<table border="0" cellpadding="0" cellspacing="0" style="max-width:600px; border-bottom-width: 1px;border-bottom-style: dashed;border-bottom-color: #efefef; margin-bottom:18px;" width="100%" class="mcnTextContentContainer">
  <tbody>
    <tr>
      <td valign="center" class="mcnTextContent" style="padding-left:18px; padding-right:18px;">
        <%= link_to group_url(@group) do %>
          <%= cover_photo_image(@group, size: :small, class: 'mcnImage', style: "width:290px; border-radius:5px; max-width:290px; min-width:100px;") %>
         <% end %>
      </td>
      <td valign="center" class="mcnTextContent" width="100%">
        <p>
          <%= link_to @group.title, group_url(@group), style: "color:#ec776a; font-size:18px;" %>
        </p>
        <%= avatar_image @user, size: :thumb, style: "width: 40px; height: 40px; border-radius: 20px; display: block; float:left; margin-right:10px;" %>
        <p>
          <em>Organisiert von</em><br>
          <%= @user.full_name %>
        </p>
      </td>
    </tr>
    <tr>
      <td colspan="2" style="padding-top:9px; padding-bottom:9px;" class="mcnTextContent">
        <p>
          <%= @group.description.truncate(255, separator: ' ') %>
        </p>
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <%= render 'mailers/shared/button', title: "Zur Gruppe", url: group_url(@group) %>
      </td>
    </tr>
    <tr>
      <td colspan="2" style="padding-bottom:5px;"></td>
    </tr>
  </tbody>
</table>

