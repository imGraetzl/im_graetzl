<!-- --------------- USER HEADER ROW --------------- -->
<table align="left" border="0" cellpadding="0" cellspacing="0" style="max-width:600px; border-bottom-width: 1px;border-bottom-style: dashed;border-bottom-color: #efefef; margin-bottom:18px;" width="100%" class="mcnTextContentContainer">
  <tbody>
    <tr>
      <td valign="center" class="mcnTextContent" style="padding-left:18px; padding-right:18px;">
        <%= image_tag Notifications::ImageService.new.avatar_url(@user), style: "width:60px; height:60px; border-radius: 30px; max-width:60px; min-width:60px;", class: "mcnImage" %>
      </td>
      <td class="mcnTextContent" style="padding-right:18px; width:100%;">
        <p>
          <em>
            <strong><%= @user.full_name %></strong> (Organisator) hat eine neue Nachricht an die
            Gruppe "<strong><%= @group.title %></strong>" gesendet.
          </em>
          <br>
        </p>
      </td>
    </tr>
    <tr>
      <td colspan="2" style="padding-bottom:9px;"></td>
    </tr>
  </tbody>
</table>
<!-- --------------- USER HEADER ROW --------------- -->

<!-- MAIL CONTENT -->
<p class="mcnTextContent">
  <%= @message.gsub("\r\n", "<br/>").html_safe %>
</p>
<!-- /MAIL CONTENT -->

<!-- BUTTON -->
<table border="0" cellpadding="0" cellspacing="0" width="100%" class="mcnButtonBlock" style="max-width:600px;">
  <tbody class="mcnButtonBlockOuter">
    <tr>
      <td style="padding-top:0; padding-right:18px; padding-bottom:18px; padding-left:18px;" valign="top" align="right" class="mcnButtonBlockInner">
        <table border="0" cellpadding="0" cellspacing="0" class="mcnButtonContentContainer" style="border-collapse: separate !important;border-top-left-radius: 4px;border-top-right-radius: 4px;border-bottom-right-radius: 4px;border-bottom-left-radius: 4px;background-color: #69A8A7;">
          <tbody>
            <tr>
              <td align="center" valign="middle" class="mcnButtonContent" style="font-family: Arial; font-size: 16px; padding: 10px;">
                <%= link_to "Zur Gruppe", group_url(@group), class: "mcnButton", title: "Button", target: "_blank", style: "font-weight: normal;letter-spacing: normal;line-height: 100%;text-align: center;text-decoration: none;color: #FFFFFF;" %>
              </td>
            </tr>
          </tbody>
        </table>
      </td>
    </tr>
  </tbody>
</table>
<!-- /BUTTON -->

<!-- MAIL FOOTER -->
<p class="mcnTextContent">
  <small>
    --<br>
    <%= @user.full_name %><br>
    <%= @reply_to %>
  </small>
</p>
<!-- /MAIL FOOTER -->
