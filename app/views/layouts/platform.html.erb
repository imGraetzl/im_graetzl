  <style>
    main {max-width: 980px;}
  </style>

  <% if user_signed_in? || controller_name == 'registrations' %>
    <%= stylesheet_link_tag 'application-loggedin', media: 'all' %>
  <% else %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
  <% end %>

  <%= javascript_include_tag 'application', defer: true, onload: 'applicationLoadedInit();' %>
  <%= javascript_include_tag "application-loggedin", defer: true if user_signed_in? || controller_name == 'registrations' %>

  <!-- DNS Prefetch for better Performance -->
  <link rel="preconnect" href="//<%= ENV['UPLOADS_BUCKET'] %>.s3.eu-central-1.amazonaws.com" crossorigin>
  <link rel="dns-prefetch" href="//<%= ENV['UPLOADS_BUCKET'] %>.s3.eu-central-1.amazonaws.com">
  <link rel="dns-prefetch" href="//www.googletagmanager.com">

  <%= favicon_link_tag 'favicon.ico' %>

</head>

<body
  data-controller="<%= controller_name %>"
  data-region="welocally"
  data-uaid="<%= Rails.env.production? ? 'G-TG0TEXE9MY' : 'G-C6SFGFCR84' %>"
  data-userid="<%= current_user&.id %>"
  class="
    <%= 'signed-in' if user_signed_in? %>
    <%= 'admin' if current_user&.admin? %>
    welocally
  ">

  <%= render 'platform/header' %>
  <%= render 'flashes' %>

  <main>
    <%= yield %>
  </main>

  <%= render 'platform/footer' %>
  <%= image_tag "/assets/icons_220125.svg", loading: 'lazy', style: 'display:none;' %>

</body>

</html>
