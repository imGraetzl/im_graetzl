  <style>
    main {max-width: 980px;}
  </style>

  <link rel="dns-prefetch" href="//welocally.at">

  <% if user_signed_in? || ['registrations', 'crowd_pledges', 'crowd_donation_pledges'].include?(controller_name)  %>
    <%= stylesheet_link_tag 'application-loggedin', media: 'all' %>
  <% else %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
  <% end %>

  <%= javascript_include_tag 'application', defer: true, onload: 'applicationLoadedInit();' %>
  <%= javascript_include_tag "application-loggedin", defer: true if user_signed_in? || ['registrations', 'crowd_pledges', 'room_rentals', 'tool_rentals'].include?(controller_name) %>

  <!-- DNS Prefetch for better Performance -->
  <% if ['home', 'regions', 'districts', 'graetzls'].include? controller_name %>
    <link rel="preconnect" href="//api.mapbox.com" crossorigin>
  <% end %>
  <link rel="dns-prefetch" href="//api.mapbox.com">
  <link rel="preconnect" href="//<%= ENV['UPLOADS_BUCKET'] %>.s3.eu-central-1.amazonaws.com" crossorigin>
  <link rel="dns-prefetch" href="//<%= ENV['UPLOADS_BUCKET'] %>.s3.eu-central-1.amazonaws.com">
  <link rel="dns-prefetch" href="//www.googletagmanager.com">
  <link rel="dns-prefetch" href="//www.google-analytics.com">

  <%= favicon_link_tag 'favicon.ico' %>
  <%= render partial: 'controller_header' rescue nil %>
</head>

<body data-controller="<%= controller_name %>" data-region="<%= current_region.id %>" data-domain="<%= current_region.domain %>" data-uaid="<%= Rails.env.production? ? 'UA-59844253-2' : 'UA-59844253-4' %>" data-userid="<%= user_signed_in? ? current_user.id : '' %>" class="<%= user_signed_in? ? 'signed-in ' : ''%>region-<%= current_region.id %> <%= controller_name %>">
  <%= render 'navigation/header' %>
  <%= render 'flashes' %>

  <main>
    <%= yield %>
  </main>

  <%= render 'footer' %>
  <%= render partial: 'controller_footer' rescue nil %>
  <%= image_tag "#{root_url}/assets/svg/icons.svg", style: 'display:none;' %>


</body>

</html>
