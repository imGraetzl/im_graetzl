<!DOCTYPE html>
<html>
<head>
  <%= render 'meta_tags' %>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag '//fonts.googleapis.com/css?family=Lato:400,700,900,400italic,700italic,900italic&subset=latin,latin-ext' %>
  <%= stylesheet_link_tag '//fonts.googleapis.com/css?family=Loved+by+the+King' %>

  <%= stylesheet_link_tag 'application', media: 'all' %>

  <%= favicon_link_tag 'favicon.ico' %>
  <%= render 'tracking_tags' %>
</head>

<body data-controller=<%= controller_name %> class=<%= user_signed_in? ? 'signed-in' : ''%>>
  <%= render 'navigation/header' %>
  <%= render 'flashes' %>

  <main>
    <%= yield %>
  </main>

  <%= render 'footer' %>
  <%= javascript_include_tag 'application' %>
  <%= render "icons" %>
</body>

</html>
