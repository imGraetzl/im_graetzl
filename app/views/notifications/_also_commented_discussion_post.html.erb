<%- post = notification.activity.trackable %>

<%= content_tag(:li, id: dom_id(notification), data: { behavior: 'notification-item' }, class: 'notification-item') do %>
  <%= link_to [post.group, post.discussion, :target => "comment_#{notification.activity.recipient_id}"] do %>
    <%= attachment_image_tag notification.activity.owner, :avatar, :fill, 40, 40, fallback: 'avatar/user/40x40.png', class: 'img-round' %>
    <div class="msg">
      <div class="timeago">vor <%= time_ago_in_words(notification.activity.created_at) %></div>
      <span class="username"><%= notification.activity.owner.username %></span> hat einen Beitrag im Thema <span class="matter"><%= post.discussion.title %></span> ebenfalls kommentiert.
    </div>
  <% end %>
<% end %>
