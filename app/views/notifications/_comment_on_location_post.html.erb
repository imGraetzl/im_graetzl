<% post = notification.activity.trackable %>
<% graetzl = Graetzl.memoized(post.graetzl_id) %>

<%= content_tag(:li, id: dom_id(notification), data: { behavior: 'notification-item' }, class: 'notification-item') do %>
  <%= link_to [graetzl, post.location, anchor: dom_id(post)] do %>
    <%= image_tag avatar_url(notification.activity.owner, :thumb), class: 'img-round' %>
    <div class="msg">
      <div class="timeago">vor <%= time_ago_in_words(notification.activity.created_at) %></div>
      <span class="username"><%= notification.activity.owner.username %></span> hat deinen Beitrag von <span class="matter"><%= post.location.name %></span> kommentiert
    </div>
  <% end %>
<% end %>
