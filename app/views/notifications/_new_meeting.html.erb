<% meeting = notification.subject %>
<% graetzl = Graetzl.memoized(meeting.graetzl_id) %>

<%= content_tag(:li, id: dom_id(notification), data: { behavior: 'notification-item' }, class: 'notification-item') do %>
  <%= link_to [graetzl, meeting] do %>
    <%= avatar_image meeting.user, size: :thumb, class: 'img-round' %>
    <div class="msg">
      <div class="timeago">vor <%= time_ago_in_words(notification.created_at) %></div>
      <span class="username"><%= meeting.user.username %></span> hat ein neues Treffen im Gr√§tzl
      <span class="matter"><%= graetzl.name %></span> erstellt
    </div>
  <% end %>
<% end %>
