<% location = notification.subject %>
<% graetzl = Graetzl.memoized(location.graetzl_id) %>

<%= content_tag(:li, id: dom_id(notification), data: { behavior: 'notification-item' }, class: 'notification-item') do %>
  <%= link_to [graetzl, location] do %>
    <%= avatar_image location, size: :thumb, class: 'img-square' %>
    <div class="msg">
      <div class="timeago">vor <%= time_ago_in_words(notification.created_at) %></div>
      Neu auf <%= t("region.#{location.region.id}.domain_short") %>: <span class="matter"><%= location.name %></span> - Sag gleich Hallo!
    </div>
  <% end %>
<% end %>
