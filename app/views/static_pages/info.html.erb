<% meta(
    title: t('.title'),
    description: t('.description'),
    robots: 'index, follow',
    og_title: t('.title'),
    og_description: t('.description'),
    og_image: image_url('meta/coop-and-share.jpg')
  )
%>

<section class="info -startpage">

  <div class="imgHeader -fullwidth">
    <div class="wrp">
      <%= image_tag("svg/services-#{current_region ? current_region.host_id : 'welocally'}-1.svg", class: 'header-logo') %>
    </div>
  </div>

  <div class="paperCard -cord1RT -header -top">
    <div class="wrp">
      <p>
        <strong>
          <%= t("region.#{current_region ? current_region.id : 'default'}.domain_full") %> ist eine Plattform für Selbständige, MacherInnen, lokale Unternehmen, Vereine und Kulturschaffende und bietet seinen NutzerInnen eine ganze Palette an Services an.
        </strong>
      </p>
      <p>
        Neben Services, die Kosten senken und Ressourcen erhöhen, werden die NutzerInnen
        mit Gleichgesinnten verbunden: Kooperieren, sharen, tauschen - neue Formen der
        Zusammenarbeit und Gemeinschaft stehen dabei im Mittelpunkt!
      </p>
      <p>
        <%= t("region.#{current_region ? current_region.id : 'default'}.domain_full") %> entfaltet seine Stärke im Wir - Ganz lokal in <%= current_region %>, analog und digital. <br><%= link_to 'Erfahre hier mehr über uns', info_ueber_uns_path %>.
      </p>
    </div>
    <div class="card"></div>
  </div>

  <%= render 'info_services' %>

</section>

<% if current_region %>
  <%= render 'info_navigation' %>
<% else %>
  <%= link_to "Sei locally dabei - Kostenlos registrieren", "#", class: 'btn-primary -rose -large -shadow -register region-select-link', data: {urlmethod: new_registration_path} if !user_signed_in? %>
<% end %>
