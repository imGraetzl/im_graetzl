<section class="homePlatform">

  <div class="mapImgBlock">

    <div id="area-map" data-x="13.3457347" data-y="47.6964719">
      <div class="map-marker -hidden -region" data-x="16.373819" data-y="48.208176">
        <%= link_to root_url(host: Region.get('wien').host) do %>
          <%= image_tag("regions/wien/logo.svg", class: 'logo-mobile', height:40) %>
        <% end %>
      </div>
      <div class="map-marker -hidden -region" data-x="14.731930" data-y="46.703800">
        <%= link_to root_url(host: Region.get('kaernten').host) do %>
          <%= image_tag("regions/kaernten/logo.svg", class: 'logo-mobile', height:40) %>
        <% end %>
      </div>
    </div>

    <div class="navBlock">
      <h1>Regionen</h1>
      <div class="links">
        <% Region.all.each do |region| %>
          <%= link_to region.name, root_url(host: region.host) %>
        <% end %>
      </div>
      <select class="mobileSelectMenu">
        <option disabled>Region wählen</option>
      </select>
    </div>
  </div>

