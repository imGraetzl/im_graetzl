          <%= icon_tag "map-location" %>
          <span>Wähle deine Region</span>
        </label>
        <select name="select" id="select" onchange="location.href = $(this).val()">
          <option value="">Auswählen</option>
          <% Region.all.each do |region| %>
            <option value="<%= root_url(host: region.host) %>"><%= region.name %></option>
          <% end %>
        </select>
      </div>

    </div>

