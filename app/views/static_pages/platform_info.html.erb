<section class="homeOut">
  <div class="buehne">
    <h1><span>Was ist los </span><span>bei dir ums Eck?</span></h1>
    <%= link_to new_registration_path(origin: request.path), class: 'registerlink' do %>
      <div class="register-badge"><%= icon_tag "user-info-profile-details" %></div>
      <div class="txt">Mitmachen</div>
    <% end %>
  </div>

  <div class="input-select graetzljump">
    <label for="select">
      <%= icon_tag "map-location" %>
      <span>Wähle deine Region</span>
    </label>
    <select name="select" id="select" onchange="location.href = $(this).val()">
      <option value="">Auswählen</option>
      <% Region.all.each do |region| %>
        <option value="<%= root_url(host: region.host) %>"><%= region.name %></option>
      <% end %>
    </select>
  </div>

</section>
