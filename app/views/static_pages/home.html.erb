<% meta(
    title: t('.title'),
    description: t('.description'),
    robots: 'index, follow',
    og_title: t('.title'),
    og_description: t('.description'),
    og_image: image_url('meta/og_logo.png')
  )
%>

<section class="homeOut">
  <div class="buehne">
    <h1><span>Was ist los </span><span>in deinem Grätzl?</span></h1>
    <%= link_to platform_meetings_wien_path, class: 'registerlink' do %>
      <div class="coop-share-logo"></div>
      <div class="txt">Alle Infos</div>
    <% end %>
  </div>

  <%= render "navigation" %>

  <div class="input-select graetzljump">
    <label for="select">
      <%= icon_tag "map-location" %>
      <span>Zu deinem Grätzl</span>
    </label>
    <%= select_tag :select, options_for_select(district_url_options), prompt: 'Bezirk wählen', onchange: 'location.href = $(this).val()' %>
  </div>

  <div class="block-meetings">
    <div class="hl-subtext">
      <h1>Entdecke — <span>Events &amp; Workhops</span> im Grätzl</h1>
      <p>Organisiert von Selbstständigen, kl. Unternehmen, Vereinen & Macher*innen.</p>
    </div>
    <div class="cardBoxCollection -tripple -morelink">
      <%= render @activity_sample.meetings %>
      <%= render 'meetings/action_card', view_all: true %>
    </div>
  </div>

  <div class="block-locations">
    <div class="hl-subtext">
      <h1>Entdecke — <span>Anbieter &amp; Locations</span> im Grätzl</h1>
      <p>Finde grätzlansässige Projekte & Selbständige, Vereine & Geschäfte</p>
    </div>
    <div class="cardBoxCollection -tripple -morelink">
      <%= render @activity_sample.locations %>
      <%= render 'locations/action_card', view_all: true %>
    </div>
  </div>

  <div class="block-rooms">
    <div class="hl-subtext">
      <h1>Entdecke — <span>Raumteiler</span> im Grätzl</h1>
      <p>Gewerbeflächen zum Teilen - Raumhabende und Raumsuchende finden sich</p>
    </div>
    <div class="cardBoxCollection -tripple -morelink">
      <%= render @activity_sample.rooms %>
      <%= render 'rooms/action_card', view_all: true %>
    </div>
  </div>

  <div class="block-tools">
    <div class="hl-subtext">
      <h1>Entdecke — <span>Toolteiler</span> im Grätzl</h1>
      <p>Arbeitsequipment leihen & Geräte am Standort nutzen <%= render 'shared/questionmarklink', hint_url: info_toolteiler_path %></p>
    </div>
    <div class="cardBoxCollection -tripple -morelink">
      <%= render @activity_sample.tool_offers %>
      <%= render 'tool_offers/action_card', view_all: true %>
    </div>
  </div>

  <div class="block-groups">
    <div class="hl-subtext">
      <h1>Entdecke — <span>Gruppen</span> im Grätzl</h1>
      <p>Vernetze dich mit anderen, tausch dich aus und kooperiere!</p>
    </div>
    <div class="cardBoxCollection -tripple -morelink">
      <%= render @activity_sample.groups %>
      <%= render 'groups/action_card', view_all: true, create_link: true %>
    </div>
  </div>

  <%= link_to 'Kostenlos in deinem Grätzl registrieren', new_registration_path(origin: request.path), class: 'btn-primary -rose -large -shadow -register' %>

</section>
