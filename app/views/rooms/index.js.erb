(function() {
  var $cardContainer = $("[data-behavior='rooms-card-container']");
  var $paginateLink = $("[data-behavior='rooms-paginate-link']");

  <% if params[:page].blank? %>
    $cardContainer.html("<%= j render partial: 'rooms/room_polymorphic', collection: @rooms, as: :room %>");
  <% else %>
    $cardContainer.append("<%= j render partial: 'rooms/room_polymorphic', collection: @rooms, as: :room %>");
  <% end %>

  <% if @rooms.next_page.present? %>
    $paginateLink.attr('href', "<%= raw(next_page_url(@rooms)) %>").removeClass("hide");
  <% else %>
    $paginateLink.addClass("hide");
  <% end %>
})();
