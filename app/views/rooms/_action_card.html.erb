<div class="cardbox-wrp" data-behavior="masonry-card">
  <div class="paperCard -cord1RT -illuteaser -rooms">
    <div class="wrp">
      <div class="user">
        <% if current_user %>
          <%= avatar_image current_user, size: :thumb, class: 'avatar img-round show-badge' %>
          <span><%= current_user.username %></span>
        <% else %>
          <picture>
            <source srcset="<%= image_path('fallbacks/user_avatar.webp') %>" type="image/webp" />
            <%= image_tag('fallbacks/user_avatar.png', loading: 'lazy', class: 'img-round') %>
          </picture>
          <span>Dein Name</span>
        <% end %>
      </div>
      <% if local_assigns[:graetzl] %>
        <h3>Hast du einen Raum / oder suchst du einen Raum?</h3>
        <%= link_to 'Deinen Raumteiler eintragen', select_room_offers_path, class: 'btn-primary' %>
      <% elsif local_assigns[:district] %>
        <h3>Hast du einen Raum / oder suchst du einen Raum?</h3>
        <%= link_to 'Deinen Raumteiler eintragen', select_room_offers_path, class: 'btn-primary' %>
      <% else %>
        <h3>Hast du einen Raum / oder suchst du einen Raum?</h3>
        <%= link_to 'Deinen Raumteiler eintragen', select_room_offers_path, class: 'btn-primary -rose' %>
      <% end %>
    </div>
    <div class="card"></div>
  </div>

  <% if local_assigns[:view_all] %>
    <% if local_assigns[:graetzl] %>
      <%= link_to 'Alle Raumteiler', rooms_graetzl_path(graetzl), class: 'link-more' %>
    <% elsif local_assigns[:district] %>
      <%= link_to 'Alle Raumteiler', district_rooms_path(district), class: 'link-more' %>
    <% else %>
      <%= link_to 'Alle Raumteiler', region_rooms_path, class: 'link-more' %>
    <% end %>
  <% end %>
</div>
